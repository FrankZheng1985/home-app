/* custom-tab-bar/index.wxss */
.tab-bar {
  position: fixed;
  bottom: 30rpx;
  left: 30rpx;
  right: 30rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(50rpx) saturate(180%);
  -webkit-backdrop-filter: blur(50rpx) saturate(180%);
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-radius: 60rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  z-index: 9999;
  padding-bottom: 0; /* 悬浮条不需要安全区域内边距，靠 bottom 偏移 */
}

/* 针对全面屏手机的适配 */
@supports (bottom: env(safe-area-inset-bottom)) {
  .tab-bar {
    bottom: calc(30rpx + env(safe-area-inset-bottom));
  }
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  position: relative;
  padding-top: 10rpx; /* 将图标和文字整体下移 */
}

.tab-bar-icon {
  width: 56rpx; /* 增大 3D 图标尺寸 */
  height: 56rpx;
  margin-bottom: 4rpx;
  transition: all 0.3s;
  filter: grayscale(100%) opacity(0.6); /* 默认灰色 */
}

.tab-bar-item.active .tab-bar-icon {
  filter: grayscale(0%) opacity(1); /* 激活时彩色/黑色 */
  transform: scale(1.1);
}

.tab-bar-emoji {
  font-size: 44rpx;
  line-height: 1;
  margin-bottom: 8rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  opacity: 0.6;
}

.tab-bar-item.active .tab-bar-emoji {
  opacity: 1;
  transform: translateY(-4rpx) scale(1.1);
}

.tab-bar-item:active .tab-bar-emoji {
  transform: scale(0.9);
}

.tab-bar-text {
  font-size: 22rpx;
  font-weight: 500;
  line-height: 1;
  transition: all 0.3s;
  color: #999;
}

.tab-bar-item.active .tab-bar-text {
  color: #000;
  font-weight: 700;
}

/* 激活状态的极简横线 */
.tab-bar-item.active::after {
  content: '';
  position: absolute;
  bottom: 12rpx;
  width: 32rpx;
  height: 4rpx;
  background: #000;
  border-radius: 2rpx;
}
