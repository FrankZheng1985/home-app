/* pages/chores/chores.wxss - 3D极简科技版 */

.page-container {
  min-height: 100vh;
  background: #F8F9FB;
  padding: 0 40rpx;
  box-sizing: border-box;
}

/* ================================ */
/*          Tabs                    */
/* ================================ */

.tabs-wrapper {
  padding-top: 40rpx;
  margin-bottom: 40rpx;
}

.tabs {
  display: flex;
  position: relative;
  height: 90rpx;
  padding: 8rpx;
  background: rgba(255, 255, 255, 0.6);
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #999;
  z-index: 2;
  transition: color 0.3s;
}

.tab-item.active {
  color: #FFF;
  font-weight: 600;
}

.tab-indicator {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  width: calc(50% - 8rpx);
  height: calc(100% - 16rpx);
  background: #000;
  border-radius: 32rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 1;
}

.tabs-2 .tab-indicator.pos-2 { transform: translateX(100%); }

.tabs-3 .tab-indicator { width: calc(33.33% - 8rpx); }
.tabs-3 .tab-indicator.pos-2 { transform: translateX(100%); }
.tabs-3 .tab-indicator.pos-3 { transform: translateX(200%); }

/* ================================ */
/*          Hero Section            */
/* ================================ */

.hero-section {
  padding: 40rpx 0;
  text-align: center;
  position: relative;
}

.hero-bg-glow {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(78, 205, 196, 0.12) 0%, rgba(255, 255, 255, 0) 70%);
  filter: blur(80rpx);
  z-index: 0;
}

.hero-title {
  font-size: 44rpx;
  font-weight: 800;
  color: #1A1A1A;
  position: relative;
  z-index: 1;
}

.hero-subtitle {
  font-size: 20rpx;
  color: #CCC;
  letter-spacing: 4rpx;
  text-transform: uppercase;
  margin-top: 8rpx;
  position: relative;
  z-index: 1;
}

/* ================================ */
/*          Chore Grid              */
/* ================================ */

.chore-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
  padding-bottom: 60rpx;
}

.chore-card {
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.chore-icon {
  font-size: 60rpx;
  margin-bottom: 24rpx;
  width: 100rpx;
  height: 100rpx;
  background: #F0F2F5;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 32rpx;
}

.chore-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #1A1A1A;
  display: block;
  margin-bottom: 8rpx;
}

.chore-points {
  font-size: 24rpx;
  color: #000;
  font-weight: 600;
}

/* ================================ */
/*          Record List             */
/* ================================ */

.record-item {
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.record-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1A1A1A;
  display: block;
}

.record-time {
  font-size: 22rpx;
  color: #CCC;
}

.points-badge {
  font-size: 32rpx;
  font-weight: 800;
  color: #1A1A1A;
}

.points-badge.pending { color: #F39C12; }
.points-badge.rejected { color: #FF4D4F; }

.record-body {
  padding-left: 100rpx;
}

.chore-type-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.record-remark {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* ================================ */
/*          Review Actions          */
/* ================================ */

.review-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid rgba(0,0,0,0.02);
}

.action-btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  font-size: 26rpx;
  font-weight: 600;
}

.action-btn.approve { background: #000; color: #FFF; }
.action-btn.reject { background: var(--tech-grey); color: #666; }

/* ================================ */
/*          Modal Styles            */
/* ================================ */

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(10rpx);
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.modal-mask.show {
  visibility: visible;
  opacity: 1;
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 60rpx 60rpx 0 0;
  padding: var(--space-xl);
  padding-bottom: calc(var(--space-xl) + var(--safe-bottom-height));
  transform: translateY(100%);
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  max-height: 90vh;
  display: flex;
  flex-direction: column;
}

.modal-content.show {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-xl);
}

.modal-title {
  font-size: var(--font-size-xl);
  font-weight: 800;
  color: var(--tech-black);
}

.close-btn {
  font-size: 60rpx;
  color: #DDD;
  line-height: 1;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
}

.form-item {
  margin-bottom: var(--space-xl);
}

.form-label {
  font-size: var(--font-size-sm);
  font-weight: 700;
  color: var(--tech-black);
  margin-bottom: var(--space-md);
  display: block;
}

.form-textarea {
  background: var(--tech-grey);
  width: 100%;
  height: 200rpx;
  border-radius: var(--radius-md);
  padding: var(--space-lg);
  box-sizing: border-box;
  font-size: var(--font-size-md);
}

.image-picker {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  width: 160rpx;
  height: 160rpx;
  position: relative;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: var(--radius-md);
}

.remove-icon {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: #ff4d4f;
  color: #FFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.add-image-btn {
  width: 160rpx;
  height: 160rpx;
  background: var(--tech-grey);
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  color: #BBB;
}

.modal-footer {
  padding-top: var(--space-xl);
}

.submit-btn {
  width: 100%;
}

/* 详情/审核弹窗特有样式 */
.detail-main {
  margin-bottom: var(--space-xl);
}

.detail-title {
  font-size: var(--font-size-lg);
  font-weight: 800;
  color: var(--tech-black);
  display: block;
}

.detail-subtitle {
  font-size: var(--font-size-xs);
  color: #999;
  margin-top: 8rpx;
  display: block;
}

.form-desc {
  font-size: var(--font-size-xs);
  color: #666;
  margin-top: 12rpx;
  display: block;
}

.detail-footer {
  display: flex;
  gap: var(--space-lg);
}

.delete-btn {
  flex: 1;
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFF;
  border: 2rpx solid #EEE;
  color: #ff4d4f;
  border-radius: 55rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.edit-btn {
  flex: 2;
}

/* ================================ */
/*          Common Glass            */
/* ================================ */

.glass-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(40rpx);
  -webkit-backdrop-filter: blur(40rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.03);
}

.success-pop {
  animation: pop 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

@keyframes pop {
  0% { transform: scale(0.9); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}
