/* pages/rewards/rewards.wxss */

.rewards-container {
  padding-top: 20rpx;
}

/* 信息卡片 */
.info-card {
  display: flex;
  align-items: flex-start;
  padding: 30rpx;
}

.info-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.info-content {
  flex: 1;
}

.info-title {
  font-size: 30rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.info-desc {
  font-size: 26rpx;
  line-height: 1.5;
}

/* 类型列表区域 */
.types-section {
  padding: 0;
}

.section-header {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
}

.add-btn {
  font-size: 28rpx;
  padding: 8rpx 16rpx;
}

.types-list {
  padding: 0 30rpx;
}

.type-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.type-item:last-child {
  border-bottom: none;
}

.type-main {
  flex: 1;
  display: flex;
  align-items: center;
}

.type-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.type-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.type-name {
  font-size: 30rpx;
  font-weight: 500;
}

.type-desc {
  font-size: 24rpx;
  margin-top: 4rpx;
}

.type-points {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.points-value {
  font-size: 36rpx;
  font-weight: 700;
}

.points-unit {
  font-size: 22rpx;
}

.type-actions {
  padding-left: 20rpx;
}

.action-delete {
  padding: 8rpx 16rpx;
  font-size: 26rpx;
}

.empty-types {
  padding: 60rpx 30rpx;
  text-align: center;
}

.tip-card {
  text-align: center;
  padding: 30rpx;
  font-size: 26rpx;
}

/* 编辑弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

.modal-content {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: var(--card-background);
  border-radius: 32rpx 32rpx 0 0;
  z-index: 101;
  padding: 30rpx;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
  animation: slideUp 0.3s ease;
  max-height: 85vh;
  overflow-y: auto;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
}

.modal-close {
  font-size: 48rpx;
  color: var(--text-placeholder);
  line-height: 1;
}

.modal-body {
  margin-bottom: 30rpx;
}

.modal-footer {
  padding-top: 20rpx;
}

/* 图标选择 */
.icon-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.icon-item {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  background-color: var(--background-color);
  border-radius: 12rpx;
  border: 2rpx solid transparent;
}

.icon-item.selected {
  border-color: var(--primary-color);
  background-color: var(--primary-light);
}

.required {
  color: var(--error-color);
}
