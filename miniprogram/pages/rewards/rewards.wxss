/* pages/rewards/rewards.wxss - 3D极简科技版 */

.page-container {
  min-height: 100vh;
  padding: 0 var(--space-lg);
  box-sizing: border-box;
}

/* ================================ */
/*          Hero Section            */
/* ================================ */

.hero-section {
  position: relative;
  padding-top: 100rpx;
  padding-bottom: 40rpx;
  text-align: center;
}

.hero-bg-glow {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(78, 140, 255, 0.12) 0%, rgba(255, 255, 255, 0) 70%);
  filter: blur(80rpx);
  z-index: 0;
}

.hero-title {
  font-size: var(--font-size-xl);
  font-weight: 800;
  color: var(--tech-black);
  position: relative;
  z-index: 1;
}

.hero-subtitle {
  font-size: var(--font-size-xs);
  color: #BBB;
  letter-spacing: 4rpx;
  text-transform: uppercase;
  margin-top: 8rpx;
  position: relative;
  z-index: 1;
  font-weight: 500;
}

/* ================================ */
/*          Value Card              */
/* ================================ */

.value-card {
  padding: var(--space-xl) var(--space-lg);
  margin-bottom: var(--space-xl);
}

.value-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.value-label {
  font-size: var(--font-size-sm);
  color: var(--text-grey);
  display: block;
  margin-bottom: var(--space-xs);
}

.value-amount {
  display: flex;
  align-items: baseline;
}

.amount-num {
  font-size: var(--font-size-huge);
  font-weight: 800;
  color: var(--tech-black);
  line-height: 1;
}

.amount-unit {
  font-size: var(--font-size-sm);
  color: var(--text-grey);
  margin-left: var(--space-xs);
  font-weight: 600;
}

.edit-btn {
  background: var(--tech-black);
  color: var(--tech-white);
  font-size: var(--font-size-sm);
  font-weight: 600;
  padding: 16rpx 44rpx;
  border-radius: var(--radius-full);
  box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.1);
}

/* ================================ */
/*          Section Header          */
/* ================================ */

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-md);
}

.section-title {
  font-size: var(--font-size-lg);
  font-weight: 700;
  color: var(--tech-black);
}

.add-btn-mini {
  font-size: var(--font-size-sm);
  color: var(--tech-black);
  font-weight: 600;
  background: var(--tech-grey);
  padding: 12rpx 32rpx;
  border-radius: var(--radius-md);
}

/* ================================ */
/*          Types List              */
/* ================================ */

.types-list {
  padding-bottom: var(--space-xl);
}

.type-item {
  padding: var(--space-lg);
  margin-bottom: var(--space-sm);
  transition: all 0.3s;
}

.type-item:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.9);
}

.type-header {
  display: flex;
  align-items: center;
}

.type-icon {
  width: 96rpx;
  height: 96rpx;
  background: var(--tech-grey);
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-right: var(--space-md);
  box-shadow: inset 0 2rpx 4rpx rgba(0,0,0,0.02);
}

.type-info {
  flex: 1;
}

.type-name {
  font-size: var(--font-size-md);
  font-weight: 700;
  color: var(--tech-black);
  display: block;
}

.type-points {
  font-size: var(--font-size-sm);
  color: var(--accent-blue);
  font-weight: 700;
  margin-top: 4rpx;
  display: block;
}

.type-actions {
  display: flex;
  gap: var(--space-sm);
}

.action-icon {
  font-size: 36rpx;
  padding: 12rpx;
  background: rgba(0,0,0,0.03);
  border-radius: 16rpx;
  transition: all 0.2s;
}

.action-icon:active {
  background: rgba(0,0,0,0.08);
  transform: scale(0.9);
}

.action-icon.delete {
  color: var(--accent-red);
}

.type-desc {
  font-size: var(--font-size-sm);
  color: var(--text-grey);
  margin-top: var(--space-md);
  padding-top: var(--space-md);
  border-top: 1rpx solid rgba(0,0,0,0.05);
  display: block;
  line-height: 1.5;
}

/* ================================ */
/*          Modal Styles            */
/* ================================ */

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(10rpx);
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.modal-mask.show {
  visibility: visible;
  opacity: 1;
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 60rpx 60rpx 0 0;
  padding: var(--space-xl);
  padding-bottom: calc(var(--space-xl) + var(--safe-bottom-height));
  transform: translateY(100%);
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  max-height: 90vh;
  display: flex;
  flex-direction: column;
}

.modal-content.show {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-xl);
}

.modal-title {
  font-size: var(--font-size-xl);
  font-weight: 800;
  color: var(--tech-black);
}

.close-btn {
  font-size: 60rpx;
  color: #DDD;
  line-height: 1;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
}

.form-item {
  margin-bottom: var(--space-xl);
}

.form-label {
  font-size: var(--font-size-sm);
  font-weight: 700;
  color: var(--tech-black);
  margin-bottom: var(--space-md);
  display: block;
}

.form-input {
  background: var(--tech-grey);
  height: 100rpx;
  border-radius: var(--radius-md);
  padding: 0 var(--space-lg);
  font-size: var(--font-size-md);
}

.form-textarea {
  background: var(--tech-grey);
  width: 100%;
  height: 200rpx;
  border-radius: var(--radius-md);
  padding: var(--space-lg);
  box-sizing: border-box;
  font-size: var(--font-size-md);
}

.icon-grid {
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  gap: 20rpx;
}

.icon-item {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--tech-grey);
  border-radius: var(--radius-sm);
  font-size: 40rpx;
  transition: all 0.2s;
}

.icon-item.active {
  background: var(--tech-black);
  transform: scale(1.1);
}

.form-tip {
  font-size: var(--font-size-xs);
  color: #999;
  margin-top: 16rpx;
  display: block;
}

.modal-footer {
  padding-top: var(--space-xl);
}

.submit-btn {
  width: 100%;
}

/* ================================ */
/*          Common Glass            */
/* ================================ */

.glass-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(40rpx);
  -webkit-backdrop-filter: blur(40rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.03);
}

.success-pop {
  animation: pop 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

@keyframes pop {
  0% { transform: scale(0.9); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}
