/* pages/login/login.wxss - Aurora 极光主题版 */

.login-page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

/* ================================ */
/*          极光渐变背景              */
/* ================================ */

.login-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(160deg, #FF6B9D 0%, #C44EFF 35%, #4E8CFF 70%, #4ECDC4 100%);
  background-size: 300% 300%;
  animation: aurora-bg 12s ease infinite;
  z-index: -2;
}

@keyframes aurora-bg {
  0%, 100% {
    background-position: 0% 50%;
  }
  25% {
    background-position: 50% 0%;
  }
  50% {
    background-position: 100% 50%;
  }
  75% {
    background-position: 50% 100%;
  }
}

/* ================================ */
/*          装饰元素                  */
/* ================================ */

/* 浮动光球 */
.decoration-ball {
  position: absolute;
  border-radius: 50%;
  z-index: -1;
}

.ball-1 {
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.4) 0%, rgba(255, 255, 255, 0) 70%);
  top: -120rpx;
  right: -100rpx;
  animation: float-slow 8s ease-in-out infinite;
}

.ball-2 {
  width: 280rpx;
  height: 280rpx;
  background: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.3) 0%, rgba(255, 255, 255, 0) 70%);
  top: 350rpx;
  left: -80rpx;
  animation: float-slow 10s ease-in-out infinite reverse;
}

.ball-3 {
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.35) 0%, rgba(255, 255, 255, 0) 70%);
  bottom: 300rpx;
  right: 40rpx;
  animation: float-slow 6s ease-in-out infinite;
}

.ball-4 {
  width: 150rpx;
  height: 150rpx;
  background: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.25) 0%, rgba(255, 255, 255, 0) 70%);
  bottom: 500rpx;
  left: 60rpx;
  animation: float-slow 7s ease-in-out infinite;
}

@keyframes float-slow {
  0%, 100% { 
    transform: translateY(0) scale(1); 
  }
  50% { 
    transform: translateY(-40rpx) scale(1.05); 
  }
}

/* 星星闪烁 */
.star {
  position: absolute;
  width: 6rpx;
  height: 6rpx;
  background: #ffffff;
  border-radius: 50%;
  z-index: 0;
}

.star-1 { top: 180rpx; left: 80rpx; animation: twinkle 3s ease-in-out infinite; }
.star-2 { top: 280rpx; right: 120rpx; animation: twinkle 2.5s ease-in-out infinite 0.5s; }
.star-3 { top: 450rpx; left: 200rpx; animation: twinkle 4s ease-in-out infinite 1s; }
.star-4 { top: 550rpx; right: 80rpx; animation: twinkle 3.5s ease-in-out infinite 0.3s; }
.star-5 { bottom: 450rpx; left: 150rpx; animation: twinkle 2.8s ease-in-out infinite 0.7s; }
.star-6 { bottom: 350rpx; right: 180rpx; animation: twinkle 3.2s ease-in-out infinite 1.2s; }

@keyframes twinkle {
  0%, 100% { 
    opacity: 0.3; 
    transform: scale(0.8); 
  }
  50% { 
    opacity: 1; 
    transform: scale(1.4); 
    box-shadow: 0 0 10rpx #ffffff;
  }
}

/* ================================ */
/*          Logo 区域                */
/* ================================ */

.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
  padding-bottom: 60rpx;
  position: relative;
  z-index: 1;
}

.logo-wrapper {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

/* 极光光晕效果 */
.logo-glow {
  position: absolute;
  width: 240rpx;
  height: 240rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.5) 0%, rgba(255, 255, 255, 0) 70%);
  border-radius: 50%;
  animation: glow-pulse 3s ease-in-out infinite;
}

.logo-glow-2 {
  position: absolute;
  width: 280rpx;
  height: 280rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.3) 0%, rgba(255, 255, 255, 0) 70%);
  border-radius: 50%;
  animation: glow-pulse 3s ease-in-out infinite 0.5s;
}

@keyframes glow-pulse {
  0%, 100% { 
    transform: scale(1); 
    opacity: 0.5; 
  }
  50% { 
    transform: scale(1.2); 
    opacity: 0.8; 
  }
}

.logo-emoji {
  font-size: 120rpx;
  position: relative;
  z-index: 1;
  animation: float-gentle 4s ease-in-out infinite;
  filter: drop-shadow(0 8rpx 16rpx rgba(0, 0, 0, 0.15));
}

@keyframes float-gentle {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-16rpx); }
}

.app-name {
  font-size: 56rpx;
  font-weight: 800;
  color: #ffffff;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.2);
  letter-spacing: 4rpx;
}

.app-slogan {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  letter-spacing: 6rpx;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* ================================ */
/*          功能卡片                  */
/* ================================ */

.feature-card {
  margin: 0 40rpx;
  padding: 48rpx 32rpx;
  background: rgba(255, 255, 255, 0.92);
  backdrop-filter: blur(30rpx) saturate(180%);
  -webkit-backdrop-filter: blur(30rpx) saturate(180%);
  border-radius: 40rpx;
  box-shadow: 
    0 20rpx 60rpx rgba(0, 0, 0, 0.12),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  position: relative;
  z-index: 1;
  animation: card-appear 0.8s ease-out forwards;
  opacity: 0;
  transform: translateY(40rpx);
}

@keyframes card-appear {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.features-grid {
  display: flex;
  justify-content: space-around;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: transform 0.3s;
}

.feature-item:active {
  transform: scale(0.95);
}

.feature-icon-wrap {
  width: 108rpx;
  height: 108rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  position: relative;
  overflow: hidden;
}

/* 图标背景渐变 */
.icon-family {
  background: linear-gradient(135deg, rgba(255, 107, 157, 0.2) 0%, rgba(255, 142, 142, 0.2) 100%);
}

.icon-chore {
  background: linear-gradient(135deg, rgba(78, 205, 196, 0.2) 0%, rgba(56, 239, 125, 0.2) 100%);
}

.icon-moments {
  background: linear-gradient(135deg, rgba(196, 78, 255, 0.2) 0%, rgba(78, 140, 255, 0.2) 100%);
}

.icon-reward {
  background: linear-gradient(135deg, rgba(255, 179, 71, 0.25) 0%, rgba(255, 140, 0, 0.25) 100%);
}

.feature-emoji {
  font-size: 48rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.1));
}

.feature-text {
  font-size: 24rpx;
  color: #636E72;
  font-weight: 600;
  letter-spacing: 1rpx;
}

/* ================================ */
/*          登录按钮区域              */
/* ================================ */

.login-section {
  margin-top: auto;
  padding: 60rpx 40rpx 40rpx;
  position: relative;
  z-index: 1;
}

.wx-login-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 108rpx;
  background: linear-gradient(135deg, #07C160 0%, #00D26A 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 54rpx;
  border: none;
  box-shadow: 
    0 16rpx 40rpx rgba(7, 193, 96, 0.4),
    inset 0 2rpx 0 rgba(255, 255, 255, 0.2);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.wx-login-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  transition: 0.6s;
}

.wx-login-btn:active::before {
  left: 100%;
}

.wx-login-btn::after {
  border: none;
}

.wx-login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.wx-icon-text {
  font-size: 40rpx;
  margin-right: 16rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.btn-text {
  font-size: 32rpx;
  color: #ffffff;
  letter-spacing: 2rpx;
}

/* 登录提示 */
.login-tip {
  text-align: center;
  margin-top: 32rpx;
  line-height: 1.8;
}

.tip-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.link {
  font-size: 24rpx;
  color: #ffffff;
  text-decoration: underline;
  text-underline-offset: 4rpx;
}

/* ================================ */
/*          底部装饰                  */
/* ================================ */

.footer-decoration {
  padding: 40rpx;
  text-align: center;
  position: relative;
  z-index: 1;
}

.footer-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.4);
  letter-spacing: 3rpx;
}

/* ================================ */
/*          动画类                    */
/* ================================ */

.animate-float {
  animation: float-gentle 4s ease-in-out infinite;
}

.animate-delay-1 {
  animation-delay: 0.1s;
}

.animate-delay-2 {
  animation-delay: 0.2s;
}

.animate-delay-3 {
  animation-delay: 0.3s;
}

.animate-delay-4 {
  animation-delay: 0.4s;
}
