/* pages/login/login.wxss - 3D极简科技版 */

/* 已由全局 .page-container 接管 */

/* ================================ */
/*          装饰光效                 */
/* ================================ */

.login-bg-glow {
  position: absolute;
  top: -20vh;
  right: -20vw;
  width: 80vw;
  height: 80vw;
  max-width: 600rpx;
  max-height: 600rpx;
  background: radial-gradient(circle, rgba(78, 140, 255, 0.1) 0%, rgba(255, 255, 255, 0) 70%);
  filter: blur(80rpx);
  z-index: 0;
}

/* ================================ */
/*          Logo 区域                */
/* ================================ */

.logo-section {
  padding-top: 15vh;
  padding-bottom: 8vh;
  text-align: center;
  position: relative;
  z-index: 1;
}

.logo-icon {
  font-size: var(--font-size-giant);
  margin-bottom: var(--space-lg);
  display: inline-block;
  filter: drop-shadow(0 20rpx 40rpx rgba(0,0,0,0.1));
  animation: float 5s ease-in-out infinite;
}

.app-name {
  font-size: var(--font-size-xxl);
  font-weight: 800;
  color: #1A1A1A;
  letter-spacing: 2rpx;
  margin-bottom: 16rpx;
}

.app-slogan {
  font-size: var(--font-size-sm);
  color: #999;
  letter-spacing: 4rpx;
  text-transform: uppercase;
}

/* ================================ */
/*          功能介绍卡片              */
/* ================================ */

.feature-card {
  padding: var(--space-xl) var(--space-lg);
  margin-bottom: var(--space-xl);
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--space-lg);
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.feature-icon-wrap {
  width: 90rpx;
  height: 90rpx;
  background: #F0F2F5;
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: var(--space-sm);
}

.feature-emoji {
  font-size: var(--font-size-xl);
}

.feature-text {
  font-size: var(--font-size-xs);
  color: #666;
  font-weight: 500;
}

/* ================================ */
/*          登录操作区域              */
/* ================================ */

.login-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-bottom: 5vh;
  position: relative;
  z-index: 1;
}

.agreement-section {
  margin-bottom: var(--space-lg);
}

/* ... 保持其余样式 ... */

.agreement-checkbox {
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkbox-icon {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #DDD;
  border-radius: 8rpx;
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  transition: all 0.2s;
}

.checkbox-icon.checked {
  background: #000;
  border-color: #000;
  color: #FFF;
}

.agreement-text {
  font-size: 24rpx;
  color: #999;
}

.link {
  color: #000;
  font-weight: 600;
  margin: 0 4rpx;
}

.wx-login-btn {
  background: #000000;
  color: #FFFFFF;
  height: 110rpx;
  border-radius: 55rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.2);
  border: none;
}

.wx-login-btn.disabled {
  background: #EEE;
  color: #BBB;
  box-shadow: none;
}

.btn-content {
  display: flex;
  align-items: center;
}

.wx-icon-text {
  margin-right: 16rpx;
}

/* ================================ */
/*          动画                     */
/* ================================ */

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

.page-fade-in {
  animation: fadeIn 0.8s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}
