/* pages/savings/savings.wxss - 3D极简科技版 */

.page-container {
  min-height: 100vh;
  background: #F8F9FB;
  padding: 0 40rpx;
  box-sizing: border-box;
}

/* ================================ */
/*          Hero Section            */
/* ================================ */

.hero-section {
  position: relative;
  padding-bottom: 40rpx;
}

.hero-bg-glow {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 500rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(78, 140, 255, 0.1) 0%, rgba(255, 255, 255, 0) 70%);
  filter: blur(60rpx);
  z-index: 0;
}

.back-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 100;
}

.back-btn {
  font-size: 40rpx;
  color: #1A1A1A;
}

.header-actions {
  display: flex;
  gap: 30rpx;
}

.action-icon {
  font-size: 36rpx;
}

.hero-title {
  font-size: 48rpx;
  font-weight: 800;
  color: #1A1A1A;
  position: relative;
  z-index: 1;
}

.hero-subtitle {
  font-size: 20rpx;
  color: #CCC;
  letter-spacing: 4rpx;
  text-transform: uppercase;
  margin-top: 8rpx;
  position: relative;
  z-index: 1;
}

/* ================================ */
/*          Tabs                    */
/* ================================ */

.tabs-wrapper {
  margin-bottom: 40rpx;
}

.tabs {
  display: flex;
  position: relative;
  height: 90rpx;
  padding: 8rpx;
  background: rgba(255, 255, 255, 0.6);
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #999;
  z-index: 2;
  transition: color 0.3s;
  position: relative;
}

.tab-item.active {
  color: #FFF;
  font-weight: 600;
}

.tab-indicator {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  width: calc(50% - 8rpx);
  height: calc(100% - 16rpx);
  background: #000;
  border-radius: 32rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 1;
}

.tab-indicator.pos-2 { transform: translateX(100%); }

.pending-badge-mini {
  background: #FF4D4F;
  color: #FFF;
  font-size: 18rpx;
  padding: 2rpx 10rpx;
  border-radius: 20rpx;
  margin-left: 8rpx;
}

/* ================================ */
/*          Balance Card            */
/* ================================ */

.balance-card {
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 40rpx;
}

.balance-label {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 16rpx;
}

.balance-value {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-bottom: 40rpx;
}

.currency {
  font-size: 40rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin-right: 8rpx;
}

.amount {
  font-size: 80rpx;
  font-weight: 800;
  color: #1A1A1A;
}

.stat-row {
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid rgba(0,0,0,0.03);
  padding-top: 40rpx;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-label {
  font-size: 20rpx;
  color: #CCC;
  display: block;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

.stat-value.highlight {
  color: #4facfe;
}

.stat-divider {
  width: 2rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.03);
}

/* ================================ */
/*          Interest Card           */
/* ================================ */

.interest-card {
  padding: 30rpx;
  margin-bottom: 40rpx;
  background: rgba(79, 172, 254, 0.05);
}

.interest-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.interest-title {
  font-size: 24rpx;
  color: #4facfe;
  font-weight: 600;
}

.interest-value {
  font-size: 40rpx;
  font-weight: 800;
  color: #4facfe;
}

.settle-btn {
  background: #000;
  color: #FFF;
  font-size: 24rpx;
  font-weight: 600;
  padding: 12rpx 40rpx;
  border-radius: 30rpx;
}

.interest-tip {
  font-size: 20rpx;
  color: #999;
}

/* ================================ */
/*          Action Buttons          */
/* ================================ */

.action-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 60rpx;
}

.primary-btn {
  flex: 1;
  height: 100rpx;
  background: #000;
  color: #FFF;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.15);
}

.secondary-btn {
  flex: 1;
  height: 100rpx;
  background: #F0F2F5;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: 600;
}

/* ================================ */
/*          Transaction & Request List */
/* ================================ */

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1A1A1A;
  margin-bottom: 30rpx;
}

.transaction-item, .request-item {
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.trans-icon {
  width: 80rpx;
  height: 80rpx;
  background: #F0F2F5;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 24rpx;
}

.trans-info, .user-info {
  flex: 1;
}

.trans-desc, .user-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
}

.trans-time, .request-time {
  font-size: 22rpx;
  color: #CCC;
}

.trans-amount {
  font-size: 30rpx;
  font-weight: 700;
}

.trans-amount.positive { color: #43a047; }
.trans-amount.negative { color: #FF4D4F; }

.empty-tip {
  text-align: center;
  font-size: 24rpx;
  color: #CCC;
  padding: 60rpx 0;
}

/* ================================ */
/*          Request Styling         */
/* ================================ */

.request-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
  border: 2rpx solid #FFF;
}

.request-status {
  font-size: 20rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  background: #F0F2F5;
  color: #999;
}

.request-status.pending { background: #FFF3E0; color: #FF9800; }
.request-status.approved { background: #E8F5E9; color: #4CAF50; }
.request-status.rejected { background: #FFEBEE; color: #F44336; }

.request-body {
  padding-left: 100rpx;
}

.request-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.request-label { font-size: 24rpx; color: #999; }
.request-amount { font-size: 32rpx; font-weight: 800; color: #1A1A1A; }
.request-desc { font-size: 24rpx; color: #666; }

.review-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid rgba(0,0,0,0.03);
}

.action-btn {
  background: #000;
  color: #FFF;
  font-size: 24rpx;
  font-weight: 600;
  padding: 12rpx 40rpx;
  border-radius: 30rpx;
}

/* ================================ */
/*          Modal Styling           */
/* ================================ */

.modal-overlay {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-overlay.show { opacity: 1; visibility: visible; }

.modal-container {
  width: 85%;
  padding: 40rpx;
  transform: scale(0.9);
  transition: all 0.3s ease;
}

.modal-overlay.show .modal-container { transform: scale(1); }

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.modal-title { font-size: 34rpx; font-weight: 800; color: #1A1A1A; }
.modal-close { font-size: 40rpx; color: #CCC; padding: 10rpx; }

.input-group { margin-bottom: 30rpx; }
.input-label { font-size: 24rpx; color: #999; margin-bottom: 12rpx; display: block; }

.amount-input-wrap {
  display: flex;
  align-items: center;
  background: #F0F2F5;
  border-radius: 24rpx;
  padding: 0 30rpx;
  height: 120rpx;
}

.currency-prefix { font-size: 40rpx; font-weight: 800; margin-right: 16rpx; }
.amount-input { flex: 1; font-size: 48rpx; font-weight: 800; }
.unit-suffix { font-size: 32rpx; color: #999; margin-left: 12rpx; }

.text-input-wrapper { background: #F0F2F5; border-radius: 24rpx; padding: 0 30rpx; height: 100rpx; display: flex; align-items: center; }
.text-input { flex: 1; font-size: 28rpx; }

.current-balance-tip { text-align: center; margin-top: 20rpx; font-size: 24rpx; color: #FF4D4F; }

.modal-footer { display: flex; gap: 20rpx; margin-top: 40rpx; }
.cancel-btn { flex: 1; height: 100rpx; background: #F0F2F5; color: #666; border-radius: 50rpx; display: flex; align-items: center; justify-content: center; font-size: 28rpx; font-weight: 600; }
.confirm-btn { flex: 2; height: 100rpx; background: #000; color: #FFF; border-radius: 50rpx; display: flex; align-items: center; justify-content: center; font-size: 28rpx; font-weight: 600; }

/* Review Modal specific */
.review-info-box { background: #F0F2F5; border-radius: 24rpx; padding: 30rpx; margin-bottom: 30rpx; }
.review-row { display: flex; justify-content: space-between; margin-bottom: 12rpx; }
.review-row:last-child { margin-bottom: 0; }
.review-label { font-size: 24rpx; color: #999; }
.review-value { font-size: 28rpx; font-weight: 600; }
.review-value.highlight { color: #4facfe; font-size: 32rpx; }
.reject-btn { flex: 1; height: 100rpx; background: #FFF1F0; color: #FF4D4F; border-radius: 50rpx; display: flex; align-items: center; justify-content: center; font-size: 28rpx; font-weight: 600; }
.approve-btn { flex: 1; height: 100rpx; background: #000; color: #FFF; border-radius: 50rpx; display: flex; align-items: center; justify-content: center; font-size: 28rpx; font-weight: 600; }

/* Rate Presets */
.rate-presets { display: flex; gap: 16rpx; margin-top: 20rpx; }
.preset-tag { padding: 10rpx 24rpx; background: #F0F2F5; border-radius: 12rpx; font-size: 24rpx; color: #666; font-weight: 600; }

/* Member Manager */
.member-list-scroll { max-height: 60vh; }
.member-item-row { display: flex; align-items: center; padding: 24rpx 0; border-bottom: 1rpx solid rgba(0,0,0,0.03); }
.member-item-row:last-child { border-bottom: none; }
.mini-avatar { width: 80rpx; height: 80rpx; border-radius: 40rpx; margin-right: 20rpx; }
.member-name-col { flex: 1; }
.member-name-col .name { font-size: 28rpx; font-weight: 600; display: block; }
.member-name-col .role { font-size: 20rpx; color: #999; }
.member-name-col .role.creator { color: #FF9800; }
.member-name-col .role.admin { color: #4facfe; }

/* ================================ */
/*          Common Glass            */
/* ================================ */

.glass-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(40rpx);
  -webkit-backdrop-filter: blur(40rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.03);
}

.success-pop {
  animation: pop 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

@keyframes pop {
  0% { transform: scale(0.9); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}
