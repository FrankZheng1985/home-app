/* pages/family/join.wxss */

.join-family-container {
  padding-top: 60rpx;
}

.header-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.header-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.header-desc {
  font-size: 28rpx;
}

.form-section {
  margin-bottom: 40rpx;
}

.code-input {
  font-size: 40rpx;
  font-weight: 600;
  letter-spacing: 8rpx;
  text-align: center;
  text-transform: uppercase;
}

.action-section {
  padding: 0 20rpx;
  margin-bottom: 60rpx;
}

.divider-text {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background-color: var(--border-color);
}

.divider-text-content {
  padding: 0 20rpx;
  font-size: 26rpx;
}

.tips-section {
  background-color: var(--background-color);
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 0 20rpx;
}

.tips-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.tips-content {
  font-size: 26rpx;
  line-height: 1.6;
}
