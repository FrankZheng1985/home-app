<!--pages/family/join.wxml - 3D极简科技版-->
<view class="page-container">
  <!-- 头部区域 -->
  <view class="hero-section">
    <view class="hero-bg-glow"></view>
    <view class="hero-content page-fade-in">
      <view class="hero-title">加入家庭</view>
      <view class="hero-subtitle">Join Your Family</view>
    </view>
  </view>

  <!-- 邀请码输入卡片 -->
  <view class="glass-card form-card success-pop">
    <view class="form-group">
      <text class="form-label">输入邀请码</text>
      <view class="code-input-wrapper">
        <input 
          class="code-input" 
          placeholder="请输入邀请码"
          value="{{inviteCode}}"
          bindinput="onCodeInput"
          maxlength="6"
          type="text"
        />
      </view>
    </view>
    
    <view class="action-row">
      <view class="primary-btn btn-active-feedback {{inviteCode.length === 6 ? '' : 'disabled'}}" bindtap="{{inviteCode.length === 6 ? 'joinFamily' : ''}}">
        <text>{{isSubmitting ? '正在加入...' : '立即加入'}}</text>
      </view>
    </view>

    <view class="divider">
      <view class="divider-line"></view>
      <text class="divider-text">OR</text>
      <view class="divider-line"></view>
    </view>

    <view class="secondary-btn btn-active-feedback" bindtap="scanQRCode">
      <text>📷 扫描二维码</text>
    </view>
  </view>

  <!-- 帮助说明 -->
  <view class="section-title">如何获取邀请码？</view>
  <view class="help-list">
    <view class="help-item glass-card">
      <view class="help-num">1</view>
      <text class="help-text">联系您的家人</text>
    </view>
    <view class="help-item glass-card">
      <view class="help-num">2</view>
      <text class="help-text">让家人打开「家庭管理」</text>
    </view>
    <view class="help-item glass-card">
      <view class="help-num">3</view>
      <text class="help-text">点击「邀请成员」获取邀请码</text>
    </view>
  </view>

  <view class="safe-bottom"></view>
</view>
