<!--pages/family/create.wxml - 3D极简科技版-->
<view class="page-container">
  <!-- 头部区域 -->
  <view class="hero-section">
    <view class="hero-bg-glow"></view>
    <view class="hero-content page-fade-in">
      <view class="hero-title">创建家庭</view>
      <view class="hero-subtitle">Create Your Smart Home</view>
    </view>
  </view>

  <!-- 表单卡片 -->
  <view class="glass-card form-card success-pop">
    <view class="form-group">
      <text class="form-label">家庭名称</text>
      <view class="input-wrapper">
        <input 
          class="form-input" 
          placeholder="如：温馨小窝、幸福之家"
          value="{{familyName}}"
          bindinput="onNameInput"
          maxlength="20"
        />
      </view>
    </view>
    
    <view class="action-row">
      <view class="primary-btn btn-active-feedback {{familyName.length >= 2 ? '' : 'disabled'}}" bindtap="{{familyName.length >= 2 ? 'createFamily' : ''}}">
        <text>{{isSubmitting ? '正在创建...' : '立即创建'}}</text>
      </view>
    </view>
  </view>

  <!-- 特权说明 -->
  <view class="section-title">创建后您将获得</view>
  <view class="benefits-grid">
    <view class="benefit-card glass-card">
      <view class="benefit-icon">👑</view>
      <view class="benefit-info">
        <text class="benefit-name">管理员权限</text>
        <text class="benefit-desc">管理成员与设置</text>
      </view>
    </view>
    <view class="benefit-card glass-card">
      <view class="benefit-icon">💌</view>
      <view class="benefit-info">
        <text class="benefit-name">邀请家人</text>
        <text class="benefit-desc">生成专属邀请码</text>
      </view>
    </view>
    <view class="benefit-card glass-card">
      <view class="benefit-icon">🎁</view>
      <view class="benefit-info">
        <text class="benefit-name">奖励体系</text>
        <text class="benefit-desc">自定义积分规则</text>
      </view>
    </view>
  </view>

  <view class="safe-bottom"></view>
</view>
