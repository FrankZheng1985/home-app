/* pages/family/create.wxss - 精美设计版 */

.create-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF5F5 0%, #F8FAFC 30%);
}

/* 渐变头部 */
.page-header {
  position: relative;
  padding-bottom: 60rpx;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 380rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  border-radius: 0 0 60rpx 60rpx;
}

.header-content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx 0;
}

.header-icon {
  position: relative;
  margin-bottom: 24rpx;
}

.icon-emoji {
  font-size: 100rpx;
  position: relative;
  z-index: 1;
}

.icon-glow {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 160rpx;
  height: 160rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: translate(-50%, -50%) scale(1); opacity: 0.3; }
  50% { transform: translate(-50%, -50%) scale(1.2); opacity: 0.5; }
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-15rpx); }
}

.animate-float {
  animation: float 3s ease-in-out infinite;
}

.header-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.header-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 表单卡片 */
.form-card {
  margin: -30rpx 30rpx 30rpx;
  background: #ffffff;
  border-radius: 28rpx;
  padding: 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(255, 107, 107, 0.15);
  position: relative;
  z-index: 2;
}

.form-group {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #2D3436;
  margin-bottom: 20rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background: #F8FAFC;
  border-radius: 20rpx;
  padding: 0 24rpx;
  border: 2rpx solid #E8ECEF;
  transition: all 0.3s;
}

.input-wrapper:focus-within {
  border-color: #FF6B6B;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(255, 107, 107, 0.1);
}

.input-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.form-input {
  flex: 1;
  height: 96rpx;
  font-size: 30rpx;
  color: #2D3436;
}

.input-hint {
  display: block;
  font-size: 24rpx;
  color: #B2BEC3;
  margin-top: 16rpx;
  padding-left: 8rpx;
}

/* 特权说明 */
.benefits-section {
  padding: 0 30rpx 30rpx;
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #636E72;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.benefit-list {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.benefit-item {
  display: flex;
  align-items: center;
  padding: 28rpx 24rpx;
  border-bottom: 1rpx solid #F5F5F5;
}

.benefit-item:last-child {
  border-bottom: none;
}

.benefit-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 20rpx;
}

.icon-admin {
  background: linear-gradient(135deg, rgba(255, 217, 61, 0.2) 0%, rgba(255, 140, 0, 0.2) 100%);
}

.icon-invite {
  background: linear-gradient(135deg, rgba(240, 147, 251, 0.15) 0%, rgba(245, 87, 108, 0.15) 100%);
}

.icon-reward {
  background: linear-gradient(135deg, rgba(56, 239, 125, 0.15) 0%, rgba(17, 153, 142, 0.15) 100%);
}

.benefit-content {
  flex: 1;
}

.benefit-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3436;
  margin-bottom: 4rpx;
}

.benefit-desc {
  font-size: 24rpx;
  color: #B2BEC3;
}

/* 提交按钮 */
.action-section {
  padding: 20rpx 30rpx 60rpx;
}

.submit-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 108rpx;
  background: #E8ECEF;
  border-radius: 54rpx;
  border: none;
  transition: all 0.3s;
}

.submit-btn::after {
  border: none;
}

.submit-btn.active {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  box-shadow: 0 12rpx 32rpx rgba(255, 107, 107, 0.4);
}

.btn-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.btn-text {
  font-size: 34rpx;
  font-weight: 600;
  color: #B2BEC3;
}

.submit-btn.active .btn-text {
  color: #ffffff;
}
