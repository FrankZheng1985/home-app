/* pages/family/create.wxss - 3D极简科技版 */

.page-container {
  min-height: 100vh;
  background: #F8F9FB;
  padding: 0 40rpx;
  box-sizing: border-box;
}

/* ================================ */
/*          Hero Section            */
/* ================================ */

.hero-section {
  position: relative;
  padding-top: 100rpx;
  padding-bottom: 60rpx;
  text-align: center;
}

.hero-bg-glow {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 500rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(78, 140, 255, 0.1) 0%, rgba(255, 255, 255, 0) 70%);
  filter: blur(60rpx);
  z-index: 0;
}

.hero-title {
  font-size: 48rpx;
  font-weight: 800;
  color: #1A1A1A;
  position: relative;
  z-index: 1;
}

.hero-subtitle {
  font-size: 20rpx;
  color: #999;
  letter-spacing: 4rpx;
  text-transform: uppercase;
  margin-top: 8rpx;
  position: relative;
  z-index: 1;
}

/* ================================ */
/*          Form Card               */
/* ================================ */

.form-card {
  padding: 60rpx 40rpx;
  margin-bottom: 60rpx;
}

.form-group {
  margin-bottom: 40rpx;
}

.form-label {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 20rpx;
}

.input-wrapper {
  background: #F0F2F5;
  border-radius: 24rpx;
  padding: 0 30rpx;
}

.form-input {
  height: 100rpx;
  font-size: 30rpx;
  color: #1A1A1A;
  font-weight: 600;
}

.primary-btn {
  background: #000;
  color: #FFF;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.15);
}

.primary-btn.disabled {
  background: #EEE;
  color: #CCC;
  box-shadow: none;
}

/* ================================ */
/*          Benefits Grid           */
/* ================================ */

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1A1A1A;
  margin-bottom: 30rpx;
}

.benefits-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding-bottom: 40rpx;
}

.benefit-card {
  padding: 30rpx;
  display: flex;
  align-items: center;
}

.benefit-icon {
  width: 80rpx;
  height: 80rpx;
  background: #F0F2F5;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 24rpx;
}

.benefit-info {
  flex: 1;
}

.benefit-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #1A1A1A;
  display: block;
}

.benefit-desc {
  font-size: 22rpx;
  color: #999;
}

/* ================================ */
/*          Common Glass            */
/* ================================ */

.glass-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(40rpx);
  -webkit-backdrop-filter: blur(40rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.03);
}

.success-pop {
  animation: pop 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

@keyframes pop {
  0% { transform: scale(0.9); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}
