/* pages/family/family.wxss - 3D极简科技版 */

.page-container {
  min-height: 100vh;
  padding: 0 var(--space-lg);
  box-sizing: border-box;
}

/* ================================ */
/*          Hero Section            */
/* ================================ */

.hero-section {
  position: relative;
  padding-top: 100rpx;
  padding-bottom: 40rpx;
  text-align: center;
}

.hero-bg-glow {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(78, 140, 255, 0.12) 0%, rgba(255, 255, 255, 0) 70%);
  filter: blur(80rpx);
  z-index: 0;
}

.hero-title {
  font-size: var(--font-size-xl);
  font-weight: 800;
  color: var(--tech-black);
  position: relative;
  z-index: 1;
}

.hero-subtitle {
  font-size: var(--font-size-xs);
  color: #BBB;
  letter-spacing: 4rpx;
  text-transform: uppercase;
  margin-top: 8rpx;
  position: relative;
  z-index: 1;
  font-weight: 500;
}

/* ================================ */
/*          Family Card             */
/* ================================ */

.family-card {
  padding: var(--space-lg);
  margin-bottom: var(--space-xl);
}

.family-main {
  display: flex;
  align-items: center;
  margin-bottom: var(--space-lg);
}

.family-icon {
  width: 110rpx;
  height: 110rpx;
  background: var(--tech-grey);
  border-radius: var(--radius-lg);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 56rpx;
  margin-right: var(--space-md);
  box-shadow: inset 0 2rpx 4rpx rgba(0,0,0,0.02);
}

.family-name {
  font-size: var(--font-size-xl);
  font-weight: 800;
  color: var(--tech-black);
  display: block;
}

.family-members-count {
  font-size: var(--font-size-xs);
  color: var(--text-grey);
  margin-top: 4rpx;
  display: block;
}

.quick-actions-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: var(--space-sm);
  padding-top: var(--space-lg);
  border-top: 1rpx solid rgba(0,0,0,0.05);
}

.quick-action {
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.2s;
}

.quick-action:active {
  transform: scale(0.9);
  opacity: 0.7;
}

.action-icon {
  font-size: 44rpx;
  margin-bottom: 8rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0,0,0,0.05));
}

.action-text {
  font-size: var(--font-size-xs);
  color: var(--text-grey);
  font-weight: 600;
}

/* ================================ */
/*          Members List            */
/* ================================ */

.section-title {
  font-size: var(--font-size-lg);
  font-weight: 700;
  color: var(--tech-black);
  margin-bottom: var(--space-md);
}

.member-item {
  display: flex;
  align-items: center;
  padding: var(--space-lg);
  margin-bottom: var(--space-sm);
  transition: all 0.3s;
}

.member-item:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.9);
}

.member-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-right: var(--space-md);
  border: 4rpx solid var(--tech-white);
  box-shadow: var(--shadow-sm);
}

.member-info {
  flex: 1;
}

.name-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.member-name {
  font-size: var(--font-size-md);
  font-weight: 700;
  color: var(--tech-black);
  margin-right: var(--space-sm);
}

.role-badge {
  font-size: 18rpx;
  padding: 4rpx 16rpx;
  border-radius: var(--radius-full);
  background: var(--tech-grey);
  color: var(--text-grey);
  font-weight: 600;
}

.role-badge.creator { 
  background: var(--tech-black); 
  color: var(--tech-white); 
}

.role-badge.admin { 
  background: rgba(79, 172, 254, 0.1); 
  color: var(--accent-blue); 
}

.member-points {
  display: flex;
  align-items: baseline;
}

.points-value {
  font-size: var(--font-size-lg);
  font-weight: 800;
  color: var(--tech-black);
  margin-right: 4rpx;
}

.points-label {
  font-size: var(--font-size-xs);
  color: #BBB;
  font-weight: 600;
}

.member-action {
  font-size: 48rpx;
  color: #DDD;
  padding: 12rpx;
}

/* ================================ */
/*          Danger Zone             */
/* ================================ */

.danger-zone {
  margin-top: var(--space-xl);
  padding-bottom: var(--space-xl);
}

.logout-btn {
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--accent-red);
  font-size: var(--font-size-md);
  font-weight: 700;
  background: rgba(255, 77, 79, 0.08);
  border-radius: var(--radius-lg);
  transition: all 0.3s;
}

.logout-btn:active {
  transform: scale(0.98);
  background: rgba(255, 77, 79, 0.15);
}

/* ================================ */
/*          Modal Styles            */
/* ================================ */

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(10rpx);
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.modal-mask.show {
  visibility: visible;
  opacity: 1;
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 60rpx 60rpx 0 0;
  padding: var(--space-xl);
  padding-bottom: calc(var(--space-xl) + var(--safe-bottom-height));
  transform: translateY(100%);
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  max-height: 90vh;
  display: flex;
  flex-direction: column;
}

.modal-content.show {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-xl);
}

.modal-title {
  font-size: var(--font-size-xl);
  font-weight: 800;
  color: var(--tech-black);
}

.close-btn {
  font-size: 60rpx;
  color: #DDD;
  line-height: 1;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
}

.invite-box {
  background: var(--tech-grey);
  padding: var(--space-lg);
  border-radius: var(--radius-lg);
  margin-bottom: var(--space-xl);
}

.invite-label {
  font-size: var(--font-size-xs);
  color: #999;
  display: block;
  margin-bottom: var(--space-sm);
}

.invite-code-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-md);
}

.invite-code {
  font-size: 64rpx;
  font-weight: 800;
  color: var(--tech-black);
  letter-spacing: 4rpx;
}

.copy-btn {
  background: var(--tech-black);
  color: #FFF;
  font-size: var(--font-size-sm);
  padding: 12rpx 32rpx;
  border-radius: var(--radius-md);
}

.invite-tip {
  font-size: 20rpx;
  color: #BBB;
}

.qr-section {
  padding-top: var(--space-md);
}

.action-list {
  background: var(--tech-grey);
  border-radius: var(--radius-lg);
  padding: 0 var(--space-lg);
}

.menu-item {
  display: flex;
  align-items: center;
  height: 110rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.03);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: var(--space-md);
}

.menu-title {
  font-size: var(--font-size-md);
  font-weight: 600;
  color: #333;
}

.role-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid rgba(0,0,0,0.03);
}

.mini-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: var(--space-md);
}

.role-info {
  flex: 1;
}

.role-name {
  font-size: var(--font-size-md);
  font-weight: 700;
  color: var(--tech-black);
  display: block;
}

.role-desc {
  font-size: var(--font-size-xs);
  color: #999;
}

.modal-footer {
  padding-top: var(--space-xl);
}

.submit-btn {
  width: 100%;
}

/* ================================ */
/*          Common Glass            */
/* ================================ */

.glass-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(40rpx);
  -webkit-backdrop-filter: blur(40rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.03);
}

.success-pop {
  animation: pop 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

@keyframes pop {
  0% { transform: scale(0.9); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}
