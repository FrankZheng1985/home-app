/* pages/family/family.wxss */

.family-container {
  padding-top: 20rpx;
}

/* 家庭信息卡片 */
.family-info-card {
  padding: 40rpx 30rpx;
}

.family-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.family-icon {
  font-size: 72rpx;
  margin-right: 24rpx;
}

.family-detail {
  display: flex;
  flex-direction: column;
}

.family-name {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.family-members {
  font-size: 26rpx;
  margin-top: 8rpx;
}

.family-actions {
  display: flex;
  border-top: 1rpx solid var(--border-color);
  padding-top: 24rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.action-text {
  font-size: 28rpx;
  color: var(--text-primary);
}

/* 成员列表 */
.members-section {
  padding: 0;
}

.section-header {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
}

.members-list {
  padding: 0 30rpx;
}

.member-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.member-item:last-child {
  border-bottom: none;
}

.member-avatar {
  margin-right: 20rpx;
}

.member-info {
  flex: 1;
}

.member-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.member-name {
  font-size: 30rpx;
  font-weight: 500;
  margin-right: 12rpx;
}

.role-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  background-color: var(--border-color);
  color: var(--text-secondary);
  border-radius: 6rpx;
}

.role-tag.owner {
  background-color: #FFF3E0;
  color: #FF9800;
}

.role-tag.admin {
  background-color: var(--primary-light);
  color: var(--primary-color);
}

.member-points {
  font-size: 26rpx;
}

.member-actions {
  padding-left: 20rpx;
}

.action-menu-btn {
  padding: 8rpx 16rpx;
  font-size: 26rpx;
}

/* 退出家庭 */
.leave-section {
  margin-top: 40rpx;
  padding: 0 30rpx;
}

.leave-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: var(--card-background);
  color: var(--error-color);
  font-size: 32rpx;
  border-radius: 12rpx;
  border: none;
}

.leave-btn::after {
  border: none;
}

/* 邀请弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

.modal-content {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: var(--card-background);
  border-radius: 32rpx 32rpx 0 0;
  z-index: 101;
  padding: 30rpx;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
}

.modal-close {
  font-size: 48rpx;
  color: var(--text-placeholder);
  line-height: 1;
}

.invite-code-section {
  margin-bottom: 30rpx;
}

.invite-label {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 12rpx;
  display: block;
}

.invite-code-box {
  display: flex;
  align-items: center;
  background-color: var(--background-color);
  border-radius: 12rpx;
  padding: 20rpx;
}

.invite-code {
  flex: 1;
  font-size: 40rpx;
  font-weight: 600;
  color: var(--primary-color);
  letter-spacing: 8rpx;
}

.copy-btn {
  margin-left: 20rpx;
}

.divider-text {
  display: flex;
  align-items: center;
  margin: 30rpx 0;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background-color: var(--border-color);
}

.divider-text-content {
  padding: 0 20rpx;
  font-size: 26rpx;
}
