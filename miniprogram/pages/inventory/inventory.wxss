/* pages/inventory/inventory.wxss - 3D极简科技版 */

.page-container {
  min-height: 100vh;
  padding: 0 var(--space-lg);
  box-sizing: border-box;
}

/* ================================ */
/*          Hero Section            */
/* ================================ */

.hero-section {
  position: relative;
  padding-top: 80rpx;
  padding-bottom: 40rpx;
  text-align: center;
}

.hero-bg-glow {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(94, 239, 245, 0.12) 0%, rgba(255, 255, 255, 0) 70%);
  filter: blur(80rpx);
  z-index: 0;
}

.hero-title {
  font-size: var(--font-size-xl);
  font-weight: 800;
  color: var(--tech-black);
  position: relative;
  z-index: 1;
}

.hero-subtitle {
  font-size: var(--font-size-xs);
  color: #BBB;
  letter-spacing: 4rpx;
  text-transform: uppercase;
  margin-top: 8rpx;
  font-weight: 500;
}

/* ================================ */
/*          Stats Card (Tabs)       */
/* ================================ */

.stats-card {
  padding: 0;
  margin-bottom: var(--space-xl);
  overflow: hidden;
}

.tab-nav {
  display: flex;
  height: 110rpx;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  font-size: var(--font-size-md);
  font-weight: 600;
  color: #999;
  transition: all 0.3s;
}

.tab-item.active {
  color: var(--tech-black);
  font-weight: 800;
}

.active-line {
  position: absolute;
  bottom: 0;
  width: 40rpx;
  height: 6rpx;
  background: var(--tech-black);
  border-radius: 3rpx;
}

/* ================================ */
/*          Inventory List          */
/* ================================ */

.inventory-list {
  padding-bottom: 120rpx;
}

.item-card {
  display: flex;
  align-items: center;
  padding: var(--space-lg);
  margin-bottom: var(--space-md);
  transition: all 0.3s;
}

.item-icon {
  width: 90rpx;
  height: 90rpx;
  background: var(--tech-grey);
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: var(--space-lg);
}

.item-info {
  flex: 1;
}

.item-name {
  font-size: var(--font-size-md);
  font-weight: 700;
  color: var(--tech-black);
  display: block;
  margin-bottom: 4rpx;
}

.item-category {
  font-size: var(--font-size-xs);
  color: #BBB;
  font-weight: 600;
}

.stock-control {
  display: flex;
  align-items: center;
  background: var(--tech-grey);
  border-radius: var(--radius-full);
  padding: 6rpx;
}

.stock-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 800;
  color: var(--tech-black);
}

.stock-value {
  padding: 0 20rpx;
  display: flex;
  align-items: baseline;
  min-width: 80rpx;
  justify-content: center;
}

.stock-value.low-stock .num {
  color: #ff4d4f;
}

.num {
  font-size: var(--font-size-lg);
  font-weight: 800;
  color: var(--tech-black);
}

.unit {
  font-size: 20rpx;
  color: #999;
  margin-left: 4rpx;
  font-weight: 600;
}

/* ================================ */
/*          Shopping List           */
/* ================================ */

.shopping-item {
  display: flex;
  align-items: center;
  padding: var(--space-lg);
  margin-bottom: var(--space-sm);
}

.item-check {
  transform: scale(0.8);
  margin-right: var(--space-md);
}

.shopping-info {
  flex: 1;
}

.shopping-name {
  font-size: var(--font-size-md);
  font-weight: 700;
  color: var(--tech-black);
  display: block;
}

.shopping-meta {
  font-size: var(--font-size-xs);
  color: #BBB;
}

/* ================================ */
/*          Floating Button         */
/* ================================ */

.fab-btn {
  position: fixed;
  right: 40rpx;
  bottom: 240rpx;
  width: 110rpx;
  height: 110rpx;
  background: var(--tech-black);
  color: #FFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.3);
  z-index: 100;
}

.empty-tip {
  text-align: center;
  padding: var(--space-xxl) 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: var(--space-md);
  opacity: 0.3;
}

.empty-tip text {
  font-size: var(--font-size-sm);
  color: #BBB;
}

/* ================================ */
/*          Modal Styles            */
/* ================================ */

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(10rpx);
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.modal-mask.show {
  visibility: visible;
  opacity: 1;
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 60rpx 60rpx 0 0;
  padding: var(--space-xl);
  padding-bottom: calc(var(--space-xl) + var(--safe-bottom-height));
  transform: translateY(100%);
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  max-height: 90vh;
  display: flex;
  flex-direction: column;
}

.modal-content.show {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-xl);
}

.modal-title {
  font-size: var(--font-size-xl);
  font-weight: 800;
  color: var(--tech-black);
}

.close-btn {
  font-size: 60rpx;
  color: #DDD;
  line-height: 1;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
}

.form-item {
  margin-bottom: var(--space-xl);
}

.form-label {
  font-size: var(--font-size-sm);
  font-weight: 700;
  color: var(--tech-black);
  margin-bottom: var(--space-md);
  display: block;
}

.form-label-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-md);
}

.manage-link {
  font-size: var(--font-size-xs);
  color: #4facfe;
  font-weight: 600;
}

.form-input {
  background: var(--tech-grey);
  height: 100rpx;
  border-radius: var(--radius-md);
  padding: 0 var(--space-lg);
  font-size: var(--font-size-md);
}

/* Category Manage Styles */
.category-manage-list {
  margin-bottom: 40rpx;
}

.category-manage-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(0,0,0,0.03);
}

.category-manage-item .cat-icon { margin-right: 20rpx; font-size: 40rpx; }
.category-manage-item .cat-name { flex: 1; font-weight: 600; }
.delete-icon { color: #ff4d4f; font-size: 40rpx; padding: 10rpx; }

.add-category-form {
  background: var(--tech-grey);
  padding: var(--space-lg);
  border-radius: var(--radius-lg);
}

.add-cat-btn {
  width: 160rpx;
  height: 80rpx;
  font-size: 28rpx;
}

.form-row {
  display: flex;
  gap: 20rpx;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: var(--space-sm);
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--space-md) 0;
  background: var(--tech-grey);
  border-radius: var(--radius-md);
  transition: all 0.3s;
  border: 2rpx solid transparent;
}

.category-item.active {
  background: var(--cat-color);
  box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.1);
}

.category-item.active text {
  color: #FFF;
}

.cat-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.category-item text {
  font-size: var(--font-size-xs);
  font-weight: 600;
  color: #888;
}

.form-row {
  display: flex;
  gap: var(--space-lg);
}

.half {
  flex: 1;
}

.form-textarea {
  background: var(--tech-grey);
  width: 100%;
  height: 200rpx;
  border-radius: var(--radius-md);
  padding: var(--space-lg);
  box-sizing: border-box;
  font-size: var(--font-size-md);
}

.modal-footer {
  padding-top: var(--space-xl);
}

.submit-btn {
  width: 100%;
}
