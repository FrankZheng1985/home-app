/* pages/moments/moments.wxss - 3D极简科技版 */

.page-container {
  min-height: 100vh;
  padding: 0 var(--space-lg);
  box-sizing: border-box;
}

/* ================================ */
/*          Hero Section            */
/* ================================ */

.hero-section {
  position: relative;
  padding-top: 100rpx;
  padding-bottom: 40rpx;
  text-align: center;
}

.hero-bg-glow {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(78, 140, 255, 0.12) 0%, rgba(255, 255, 255, 0) 70%);
  filter: blur(80rpx);
  z-index: 0;
}

.hero-title {
  font-size: var(--font-size-xl);
  font-weight: 800;
  color: var(--tech-black);
  position: relative;
  z-index: 1;
}

.hero-subtitle {
  font-size: var(--font-size-xs);
  color: #BBB;
  letter-spacing: 4rpx;
  text-transform: uppercase;
  margin-top: 8rpx;
  position: relative;
  z-index: 1;
  font-weight: 500;
}

/* ================================ */
/*          Filter Tabs             */
/* ================================ */

.filter-wrapper {
  margin-bottom: var(--space-lg);
}

.filter-scroll {
  white-space: nowrap;
  padding: 10rpx 0;
}

.filter-item {
  display: inline-flex;
  align-items: center;
  padding: 16rpx 36rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: var(--radius-full);
  margin-right: var(--space-sm);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  transition: all 0.3s;
}

.filter-item.active {
  background: var(--tech-black);
  border-color: var(--tech-black);
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.1);
}

.filter-icon {
  font-size: var(--font-size-md);
  margin-right: 12rpx;
}

.filter-name {
  font-size: var(--font-size-sm);
  color: var(--text-grey);
  font-weight: 600;
}

.filter-item.active .filter-name {
  color: var(--tech-white);
}

/* ================================ */
/*          Activity List           */
/* ================================ */

.activity-list {
  padding-bottom: var(--space-xl);
}

.activity-item {
  padding: var(--space-lg);
  margin-bottom: var(--space-md);
  transition: all 0.3s;
}

.activity-item:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.9);
}

.activity-header {
  display: flex;
  align-items: center;
  margin-bottom: var(--space-md);
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: var(--space-md);
  border: 4rpx solid var(--tech-white);
  box-shadow: var(--shadow-sm);
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: var(--font-size-md);
  font-weight: 700;
  color: var(--tech-black);
  display: block;
}

.activity-time {
  font-size: var(--font-size-xs);
  color: #BBB;
  margin-top: 2rpx;
  display: block;
}

.activity-type-icon {
  font-size: 44rpx;
  opacity: 0.8;
  filter: drop-shadow(0 4rpx 8rpx rgba(0,0,0,0.05));
}

.activity-body {
  padding-left: 100rpx;
}

.activity-title {
  font-size: var(--font-size-md);
  color: var(--tech-black);
  font-weight: 600;
  line-height: 1.5;
  display: block;
  margin-bottom: 8rpx;
}

.activity-desc {
  font-size: var(--font-size-sm);
  color: var(--text-grey);
  line-height: 1.6;
}

/* ================================ */
/*          Common Glass            */
/* ================================ */

.glass-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(40rpx);
  -webkit-backdrop-filter: blur(40rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.03);
}

.success-pop {
  animation: pop 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

@keyframes pop {
  0% { transform: scale(0.9); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}
