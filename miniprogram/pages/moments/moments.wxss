/* pages/moments/moments.wxss */

.moments-container {
  padding-top: 20rpx;
}

/* 发布按钮 */
.publish-btn {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  background-color: var(--card-background);
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-light);
}

.publish-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.publish-text {
  font-size: 30rpx;
  color: var(--text-placeholder);
}

/* 动态列表 */
.posts-list {
  padding-bottom: 30rpx;
}

.post-item {
  margin-bottom: 20rpx;
}

.post-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.post-author {
  display: flex;
  align-items: center;
}

.author-avatar {
  margin-right: 16rpx;
}

.author-info {
  display: flex;
  flex-direction: column;
}

.author-name {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.post-time {
  font-size: 24rpx;
  margin-top: 4rpx;
}

.post-delete {
  padding: 8rpx 16rpx;
  font-size: 26rpx;
}

.post-content {
  font-size: 30rpx;
  line-height: 1.7;
  color: var(--text-primary);
  margin-bottom: 20rpx;
  white-space: pre-wrap;
  word-break: break-all;
}

/* 图片 */
.post-images {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.post-image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
}

/* 互动区 */
.post-actions {
  display: flex;
  padding-top: 20rpx;
  border-top: 1rpx solid var(--border-color);
}

.action-item {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
}

.action-icon {
  font-size: 36rpx;
  margin-right: 8rpx;
}

.action-count {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.action-item.liked .action-count {
  color: var(--error-color);
}

.load-more, .no-more {
  text-align: center;
  padding: 30rpx;
  font-size: 26rpx;
}

/* 发布弹窗 */
.publish-modal {
  height: 70vh;
  display: flex;
  flex-direction: column;
}

.publish-modal .modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.modal-cancel, .modal-confirm {
  font-size: 30rpx;
  padding: 10rpx 20rpx;
}

.modal-cancel {
  color: var(--text-secondary);
}

.modal-confirm {
  color: var(--text-placeholder);
}

.modal-confirm.active {
  color: var(--primary-color);
  font-weight: 500;
}

.publish-modal .modal-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.publish-textarea {
  flex: 1;
  width: 100%;
  padding: 20rpx 0;
  font-size: 32rpx;
  line-height: 1.6;
  box-sizing: border-box;
}

.publish-options {
  padding: 20rpx 0;
  border-top: 1rpx solid var(--border-color);
}

.option-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.option-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.option-text {
  flex: 1;
  font-size: 28rpx;
}

.option-switch {
  width: 80rpx;
  height: 44rpx;
  background-color: var(--border-color);
  border-radius: 22rpx;
  position: relative;
  transition: all 0.3s;
}

.option-switch::after {
  content: '';
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  width: 36rpx;
  height: 36rpx;
  background-color: #fff;
  border-radius: 50%;
  transition: all 0.3s;
}

.option-switch.on {
  background-color: var(--primary-color);
}

.option-switch.on::after {
  left: 40rpx;
}

.publish-tip {
  font-size: 24rpx;
  padding: 16rpx;
  background-color: var(--primary-light);
  border-radius: 8rpx;
  margin-top: 10rpx;
}

/* 弹窗样式（复用） */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

.modal-content {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: var(--card-background);
  border-radius: 32rpx 32rpx 0 0;
  z-index: 101;
  padding: 30rpx;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}
