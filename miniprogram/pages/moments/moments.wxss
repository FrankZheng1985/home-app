/* pages/moments/moments.wxss - 家庭活动记录样式 */

.activity-page {
  min-height: 100vh;
  background: #F8FAFC;
  padding-bottom: 200rpx;
}

/* 渐变头部 */
.activity-header {
  position: relative;
  padding: 60rpx 30rpx 80rpx;
  margin-bottom: -40rpx;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 0 0 60rpx 60rpx;
}

.header-content {
  position: relative;
  z-index: 1;
}

.header-title {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 内容区域 */
.activity-content {
  position: relative;
  z-index: 2;
  padding: 0 30rpx;
}

/* 筛选标签 */
.filter-tabs {
  display: flex;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  overflow-x: auto;
  white-space: nowrap;
}

.filter-tab {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  margin-right: 8rpx;
  transition: all 0.3s;
  flex-shrink: 0;
}

.filter-tab:last-child {
  margin-right: 0;
}

.filter-tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.filter-tab .tab-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.filter-tab .tab-name {
  font-size: 24rpx;
  color: #636E72;
}

.filter-tab.active .tab-name {
  color: #ffffff;
  font-weight: 600;
}

/* 活动列表 */
.activity-list {
  padding-bottom: 20rpx;
}

/* 活动卡片 */
.activity-card {
  display: flex;
  align-items: flex-start;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.activity-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

/* 活动类型颜色 */
.activity-card.chore .activity-icon-wrap {
  background: linear-gradient(135deg, #FF9F43 0%, #F97F51 100%);
}

.activity-card.sport .activity-icon-wrap {
  background: linear-gradient(135deg, #26de81 0%, #20bf6b 100%);
}

.activity-card.savings .activity-icon-wrap {
  background: linear-gradient(135deg, #4834d4 0%, #686de0 100%);
}

.activity-card.points .activity-icon-wrap {
  background: linear-gradient(135deg, #eb3b5a 0%, #fc5c65 100%);
}

/* 活动图标 */
.activity-icon-wrap {
  width: 88rpx;
  height: 88rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.activity-icon {
  font-size: 40rpx;
}

/* 活动内容 */
.activity-main {
  flex: 1;
  min-width: 0;
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
  padding: 0;
}

.activity-user {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.user-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3436;
}

.activity-time {
  font-size: 24rpx;
  color: #B2BEC3;
}

.activity-body {
  display: flex;
  flex-direction: column;
}

.activity-title {
  font-size: 30rpx;
  color: #2D3436;
  line-height: 1.5;
  margin-bottom: 6rpx;
}

.activity-desc {
  font-size: 26rpx;
  color: #636E72;
  line-height: 1.4;
}

.activity-note {
  font-size: 24rpx;
  color: #B2BEC3;
  margin-top: 8rpx;
  padding: 8rpx 12rpx;
  background: #F8FAFC;
  border-radius: 8rpx;
}

/* 右箭头 */
.activity-arrow {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 88rpx;
  flex-shrink: 0;
}

.arrow-icon {
  font-size: 36rpx;
  color: #D0D0D0;
}

/* 列表底部 */
.list-footer {
  padding: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading-more {
  display: flex;
  gap: 8rpx;
}

.loading-dot {
  width: 12rpx;
  height: 12rpx;
  background: #667eea;
  border-radius: 50%;
  animation: bounce 1.4s infinite ease-in-out;
}

.loading-dot:nth-child(1) { animation-delay: -0.32s; }
.loading-dot:nth-child(2) { animation-delay: -0.16s; }

@keyframes bounce {
  0%, 80%, 100% { transform: scale(0); }
  40% { transform: scale(1); }
}

.footer-text {
  font-size: 26rpx;
  color: #B2BEC3;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 60rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #2D3436;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #636E72;
  text-align: center;
  margin-bottom: 40rpx;
}

/* 快速操作按钮 */
.quick-actions {
  display: flex;
  gap: 24rpx;
}

.quick-action {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.quick-action:active {
  transform: scale(0.95);
}

.quick-action .action-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.quick-action .action-text {
  font-size: 26rpx;
  color: #636E72;
  font-weight: 500;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

.animate-float {
  animation: float 3s ease-in-out infinite;
}

