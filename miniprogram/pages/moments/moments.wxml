<!--pages/moments/moments.wxml - 3D极简科技版-->
<view class="page-container">
  <!-- 头部区域 -->
  <view class="hero-section">
    <view class="hero-bg-glow"></view>
    <view class="hero-content page-fade-in">
      <view class="hero-title">家庭动态</view>
      <view class="hero-subtitle">Family Activities</view>
    </view>
  </view>

  <!-- 筛选标签 (Glassmorphism Tabs) -->
  <view class="filter-wrapper">
    <scroll-view class="filter-scroll" scroll-x enable-flex>
      <view 
        class="filter-item {{filterType === item.key ? 'active' : ''}}" 
        wx:for="{{filterTypes}}" 
        wx:key="key"
        data-type="{{item.key}}"
        bindtap="onFilterChange"
      >
        <text class="filter-icon">{{item.icon}}</text>
        <text class="filter-name">{{item.name}}</text>
      </view>
    </scroll-view>
  </view>

  <!-- 活动列表 -->
  <view class="activity-list">
    <view class="activity-item glass-card success-pop" wx:for="{{activities}}" wx:key="id">
      <view class="activity-header">
        <image class="user-avatar" src="{{item.user.avatarUrl || '/assets/images/default-avatar.png'}}" mode="aspectFill" />
        <view class="user-info">
          <text class="user-name">{{item.user.nickname}}</text>
          <text class="activity-time">{{item.createdAtText}}</text>
        </view>
        <view class="activity-type-icon">{{item.icon}}</view>
      </view>
      <view class="activity-body">
        <text class="activity-title">{{item.title}}</text>
        <text class="activity-desc" wx:if="{{item.description}}">{{item.description}}</text>
      </view>
    </view>
  </view>

  <view class="safe-bottom"></view>
</view>