/* pages/sports/sports.wxss - 3D极简科技版 */

.page-container {
  min-height: 100vh;
  padding: 0 var(--space-lg);
  box-sizing: border-box;
}

/* ================================ */
/*          Hero Section            */
/* ================================ */

.hero-section {
  position: relative;
  padding-top: 100rpx;
  padding-bottom: 60rpx;
  text-align: center;
  overflow: hidden;
}

.hero-bg-glow {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(67, 160, 71, 0.12) 0%, rgba(255, 255, 255, 0) 70%);
  filter: blur(80rpx);
  z-index: 0;
}

.steps-main {
  position: relative;
  z-index: 1;
}

.steps-label {
  font-size: var(--font-size-sm);
  color: var(--text-grey);
  display: block;
  margin-bottom: var(--space-sm);
  font-weight: 500;
  letter-spacing: 2rpx;
}

.steps-value-row {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-bottom: var(--space-lg);
}

.steps-value {
  font-size: var(--font-size-giant);
  font-weight: 800;
  color: var(--tech-black);
  line-height: 1;
  text-shadow: 0 10rpx 20rpx rgba(0,0,0,0.05);
}

.steps-unit {
  font-size: var(--font-size-md);
  color: var(--text-grey);
  margin-left: var(--space-xs);
  font-weight: 600;
}

.sync-btn-mini {
  display: inline-block;
  background: var(--tech-black);
  color: var(--tech-white);
  font-size: var(--font-size-xs);
  padding: 16rpx 40rpx;
  border-radius: var(--radius-full);
  font-weight: 600;
  box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.1);
  transition: all 0.3s;
}

/* ================================ */
/*          Stats Card              */
/* ================================ */

.stats-card {
  padding: var(--space-lg);
  margin-bottom: var(--space-lg);
}

.stat-group {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-label {
  font-size: var(--font-size-xs);
  color: var(--text-grey);
  display: block;
  margin-bottom: var(--space-xs);
}

.stat-value {
  font-size: var(--font-size-lg);
  font-weight: 800;
  color: var(--tech-black);
}

.stat-divider {
  width: 1rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.05);
}

/* ================================ */
/*          Redeem Card             */
/* ================================ */

.redeem-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--space-lg);
  margin-bottom: var(--space-xl);
  background: linear-gradient(135deg, rgba(255, 217, 61, 0.1) 0%, rgba(255, 255, 255, 0.5) 100%);
}

.redeem-info {
  display: flex;
  align-items: center;
}

.redeem-icon {
  font-size: 56rpx;
  margin-right: var(--space-md);
  filter: drop-shadow(0 4rpx 8rpx rgba(0,0,0,0.1));
}

.redeem-title {
  font-size: var(--font-size-md);
  font-weight: 700;
  color: var(--tech-black);
  display: block;
}

.redeem-desc {
  font-size: var(--font-size-xs);
  color: var(--text-grey);
}

.redeem-btn {
  background: var(--tech-black);
  color: var(--tech-white);
  font-size: var(--font-size-sm);
  font-weight: 600;
  padding: 16rpx 36rpx;
  border-radius: var(--radius-md);
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.1);
}

.redeem-btn.disabled {
  background: var(--tech-grey);
  color: #CCC;
  box-shadow: none;
}

/* ================================ */
/*          Section Header          */
/* ================================ */

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-md);
}

.section-title {
  font-size: var(--font-size-lg);
  font-weight: 700;
  color: var(--tech-black);
  margin-bottom: var(--space-md);
}

.add-btn-mini {
  font-size: var(--font-size-sm);
  color: var(--tech-black);
  font-weight: 600;
  background: var(--tech-grey);
  padding: 12rpx 32rpx;
  border-radius: var(--radius-md);
}

/* ================================ */
/*          Checkin List            */
/* ================================ */

.checkin-list {
  margin-bottom: var(--space-xl);
}

.checkin-item {
  display: flex;
  align-items: center;
  padding: var(--space-md) var(--space-lg);
  margin-bottom: var(--space-sm);
  transition: all 0.3s;
}

.checkin-item:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.9);
}

.checkin-icon {
  width: 88rpx;
  height: 88rpx;
  background: var(--tech-grey);
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  margin-right: var(--space-md);
  box-shadow: inset 0 2rpx 4rpx rgba(0,0,0,0.02);
}

.checkin-info {
  flex: 1;
}

.checkin-name {
  font-size: var(--font-size-md);
  font-weight: 700;
  color: var(--tech-black);
  display: block;
}

.checkin-desc {
  font-size: var(--font-size-xs);
  color: var(--text-grey);
}

.checkin-time {
  font-size: var(--font-size-xs);
  color: #BBB;
}

.empty-tip {
  text-align: center;
  font-size: var(--font-size-sm);
  color: #BBB;
  padding: var(--space-xl) 0;
}

/* ================================ */
/*          History List            */
/* ================================ */

.history-list {
  padding-bottom: var(--space-xl);
}

.history-item {
  display: flex;
  align-items: center;
  padding: var(--space-lg);
  margin-bottom: var(--space-sm);
}

.history-date {
  text-align: center;
  margin-right: var(--space-lg);
  padding-right: var(--space-lg);
  border-right: 1rpx solid rgba(0,0,0,0.05);
  min-width: 100rpx;
}

.date-day {
  font-size: var(--font-size-xl);
  font-weight: 800;
  color: var(--tech-black);
  display: block;
  line-height: 1;
}

.date-month {
  font-size: var(--font-size-xs);
  color: var(--text-grey);
  text-transform: uppercase;
  margin-top: 4rpx;
  display: block;
}

.history-info {
  flex: 1;
}

.history-name {
  font-size: var(--font-size-md);
  font-weight: 700;
  color: var(--tech-black);
  display: block;
}

.history-desc {
  font-size: var(--font-size-xs);
  color: var(--text-grey);
}

.history-steps {
  text-align: right;
}

.steps-num {
  font-size: var(--font-size-md);
  font-weight: 800;
  color: #43a047;
  display: block;
}

/* ================================ */
/*          Modal Styles            */
/* ================================ */

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(10rpx);
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.modal-mask.show {
  visibility: visible;
  opacity: 1;
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 60rpx 60rpx 0 0;
  padding: var(--space-xl);
  padding-bottom: calc(var(--space-xl) + var(--safe-bottom-height));
  transform: translateY(100%);
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  max-height: 90vh;
  display: flex;
  flex-direction: column;
}

.modal-content.show {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-xl);
}

.modal-title {
  font-size: var(--font-size-xl);
  font-weight: 800;
  color: var(--tech-black);
}

.close-btn {
  font-size: 60rpx;
  color: #DDD;
  line-height: 1;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
}

.form-item {
  margin-bottom: var(--space-xl);
}

.form-label {
  font-size: var(--font-size-sm);
  font-weight: 700;
  color: var(--tech-black);
  margin-bottom: var(--space-md);
  display: block;
}

.sport-type-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.sport-type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  background: var(--tech-grey);
  border-radius: var(--radius-md);
  transition: all 0.3s;
}

.sport-type-item.active {
  background: var(--tech-black);
}

.sport-type-item.active text {
  color: #FFF;
}

.sport-icon {
  font-size: 44rpx;
  margin-bottom: 8rpx;
}

.sport-name {
  font-size: var(--font-size-xs);
  font-weight: 600;
  color: #666;
}

.duration-control {
  display: flex;
  align-items: center;
  background: var(--tech-grey);
  border-radius: var(--radius-md);
  height: 100rpx;
  padding: 0 10rpx;
}

.dur-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: 800;
  color: var(--tech-black);
}

.dur-input {
  flex: 1;
  text-align: center;
  font-size: var(--font-size-lg);
  font-weight: 800;
  color: var(--tech-black);
}

.quick-durations {
  display: flex;
  gap: 16rpx;
  margin-top: 20rpx;
}

.dur-tag {
  padding: 10rpx 24rpx;
  background: var(--tech-grey);
  border-radius: var(--radius-sm);
  font-size: var(--font-size-xs);
  color: #666;
  font-weight: 600;
}

.calories-preview {
  display: flex;
  align-items: baseline;
}

.cal-num {
  font-size: var(--font-size-xl);
  font-weight: 800;
  color: #ff9800;
}

.cal-unit {
  font-size: var(--font-size-xs);
  color: #999;
  margin-left: 8rpx;
  font-weight: 600;
}

.form-textarea {
  background: var(--tech-grey);
  width: 100%;
  height: 160rpx;
  border-radius: var(--radius-md);
  padding: var(--space-lg);
  box-sizing: border-box;
  font-size: var(--font-size-md);
}

.modal-footer {
  padding-top: var(--space-xl);
}

.submit-btn {
  width: 100%;
}

/* Type Manage Styles */
.type-manage-list {
  margin-bottom: 40rpx;
}

.type-manage-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(0,0,0,0.03);
}

.type-manage-item .type-icon { margin-right: 20rpx; }
.type-manage-item .type-name { flex: 1; font-weight: 600; }
.type-manage-item .type-cal { font-size: 24rpx; color: #999; margin-right: 20rpx; }
.delete-icon { color: #ff4d4f; font-size: 40rpx; padding: 10rpx; }

.add-type-form {
  background: var(--tech-grey);
  padding: var(--space-lg);
  border-radius: var(--radius-lg);
}

.form-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.form-input {
  flex: 1;
  background: #FFF;
  height: 80rpx;
  border-radius: var(--radius-sm);
  padding: 0 20rpx;
  font-size: 26rpx;
}

.add-btn {
  height: 80rpx;
  font-size: 28rpx;
}

.steps-unit {
  font-size: var(--font-size-xs);
  color: var(--text-grey);
}

/* ================================ */
/*          Common Glass            */
/* ================================ */

.glass-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(40rpx);
  -webkit-backdrop-filter: blur(40rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.03);
}

.success-pop {
  animation: pop 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

@keyframes pop {
  0% { transform: scale(0.9); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}
