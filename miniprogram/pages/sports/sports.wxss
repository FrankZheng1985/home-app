/* pages/sports/sports.wxss - 运动打卡页面样式 */

.sports-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #e8f5e9 0%, #f5f5f5 30%);
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 未加入家庭提示 */
.no-family-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 40rpx;
}

.no-family-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.no-family-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.no-family-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 48rpx;
  text-align: center;
}

.join-family-btn {
  background: linear-gradient(135deg, #43a047, #66bb6a);
  color: #fff;
  font-size: 30rpx;
  padding: 24rpx 60rpx;
  border-radius: 44rpx;
  border: none;
}

/* 头部统计卡片 */
.header-card {
  position: relative;
  margin: 20rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(76, 175, 80, 0.15);
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #43a047 0%, #66bb6a 50%, #81c784 100%);
}

.header-content {
  position: relative;
  padding: 40rpx;
  color: #fff;
}

/* 步数区域 */
.steps-section {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.steps-icon {
  font-size: 72rpx;
  margin-right: 24rpx;
}

.steps-info {
  flex: 1;
}

.steps-label {
  font-size: 26rpx;
  opacity: 0.9;
}

.steps-row {
  display: flex;
  align-items: baseline;
  margin: 8rpx 0;
}

.steps-value {
  font-size: 64rpx;
  font-weight: bold;
  font-family: 'DIN Alternate', 'Helvetica Neue', sans-serif;
}

.steps-unit {
  font-size: 28rpx;
  margin-left: 8rpx;
  opacity: 0.9;
}

.steps-target {
  font-size: 24rpx;
  opacity: 0.85;
}

.steps-progress {
  margin-left: 16rpx;
  background: rgba(255, 255, 255, 0.25);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.sync-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
}

.sync-icon {
  font-size: 36rpx;
  margin-bottom: 4rpx;
}

.sync-text {
  font-size: 22rpx;
}

/* 进度条 */
.progress-bar {
  height: 12rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 6rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #fff;
  border-radius: 6rpx;
  transition: width 0.5s ease;
}

/* 统计行 */
.stats-row {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  padding: 24rpx 0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-value {
  font-size: 44rpx;
  font-weight: bold;
  font-family: 'DIN Alternate', 'Helvetica Neue', sans-serif;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.85;
  margin-top: 8rpx;
}

.stat-divider {
  width: 2rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* 日历区域 */
.calendar-section {
  margin: 20rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.add-btn, .manage-btn {
  font-size: 26rpx;
  color: #43a047;
  padding: 8rpx 20rpx;
  background: #e8f5e9;
  border-radius: 20rpx;
}

/* 周日历 */
.week-calendar {
  display: flex;
  justify-content: space-between;
}

.calendar-day {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  position: relative;
  min-width: 80rpx;
}

.calendar-day.today {
  background: linear-gradient(135deg, #e8f5e9, #c8e6c9);
}

.calendar-day.checked {
  background: linear-gradient(135deg, #43a047, #66bb6a);
  color: #fff;
}

.day-name {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.calendar-day.checked .day-name {
  color: rgba(255, 255, 255, 0.85);
}

.day-date {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.calendar-day.checked .day-date {
  color: #fff;
}

.check-mark {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  font-size: 18rpx;
  background: #fff;
  color: #43a047;
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 打卡区域 */
.checkin-section {
  margin: 20rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.checkin-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.checkin-card {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8faf8;
  border-radius: 16rpx;
}

.checkin-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 20rpx;
}

.checkin-info {
  flex: 1;
}

.checkin-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  display: block;
}

.checkin-detail {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
}

.checkin-time {
  font-size: 24rpx;
  color: #999;
}

/* 快速打卡 */
.quick-checkin {
  text-align: center;
}

.quick-tip {
  font-size: 26rpx;
  color: #999;
  display: block;
  margin-bottom: 24rpx;
}

.sport-types {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  justify-content: center;
}

.sport-type-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  background: #f8faf8;
  border-radius: 16rpx;
  width: calc(25% - 15rpx);
  box-sizing: border-box;
}

.sport-type-card:active {
  transform: scale(0.95);
  background: #e8f5e9;
}

.type-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-bottom: 12rpx;
}

.type-name {
  font-size: 24rpx;
  color: #666;
}

/* 运动类型管理 */
.types-section {
  margin: 20rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.types-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #f8faf8;
  border-radius: 16rpx;
  width: calc(25% - 12rpx);
  box-sizing: border-box;
}

.type-item:active {
  background: #e8f5e9;
}

.type-icon-small {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.type-label {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.type-calories {
  font-size: 20rpx;
  color: #999;
}

/* 历史记录 */
.history-section {
  margin: 20rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8faf8;
  border-radius: 16rpx;
}

.history-date {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-right: 24rpx;
  border-right: 2rpx solid #e0e0e0;
  margin-right: 24rpx;
  min-width: 80rpx;
}

.date-day {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.date-weekday {
  font-size: 22rpx;
  color: #999;
}

.history-content {
  flex: 1;
}

.history-sport {
  display: flex;
  align-items: center;
  margin-bottom: 6rpx;
}

.sport-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.sport-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.history-stats {
  font-size: 24rpx;
  color: #999;
}

.dot {
  margin: 0 8rpx;
}

.history-steps {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 20rpx;
  background: #e8f5e9;
  border-radius: 12rpx;
}

.steps-num {
  font-size: 28rpx;
  font-weight: bold;
  color: #43a047;
}

.steps-text {
  font-size: 20rpx;
  color: #66bb6a;
}

/* 空状态 */
.empty-history {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.modal-container {
  width: 100%;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  max-height: 85vh;
  overflow-y: auto;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.modal-overlay.show .modal-container {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  background: #fff;
  z-index: 10;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 32rpx;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #f0f0f0;
}

/* 表单样式 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
  display: block;
}

.type-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.type-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.type-option.selected {
  background: #e8f5e9;
  border-color: #43a047;
}

.option-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.option-name {
  font-size: 24rpx;
  color: #666;
}

.type-option.selected .option-name {
  color: #43a047;
  font-weight: 500;
}

/* 时长选择器 */
.duration-selector {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
  margin-bottom: 20rpx;
}

.duration-btn {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #666;
}

.duration-btn:active {
  background: #e0e0e0;
}

.duration-input {
  width: 160rpx;
  height: 80rpx;
  text-align: center;
  font-size: 48rpx;
  font-weight: bold;
  color: #43a047;
  border: none;
}

.quick-durations {
  display: flex;
  justify-content: center;
  gap: 16rpx;
}

.quick-dur {
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.quick-dur:active {
  background: #e8f5e9;
  color: #43a047;
}

.remark-input {
  width: 100%;
  height: 160rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 预估消耗 */
.calories-preview {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #e8f5e9, #c8e6c9);
  border-radius: 16rpx;
}

.preview-label {
  font-size: 28rpx;
  color: #388e3c;
}

.preview-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #2e7d32;
}

/* 按钮样式 */
.cancel-btn {
  flex: 1;
  height: 88rpx;
  background: #f5f5f5;
  color: #666;
  font-size: 30rpx;
  border-radius: 44rpx;
  border: none;
}

.confirm-btn {
  flex: 2;
  height: 88rpx;
  background: linear-gradient(135deg, #43a047, #66bb6a);
  color: #fff;
  font-size: 30rpx;
  border-radius: 44rpx;
  border: none;
}

.confirm-btn[disabled] {
  background: #ccc;
  color: #999;
}

/* 类型管理弹窗 */
.type-modal {
  max-height: 70vh;
}

.type-list {
  margin-bottom: 32rpx;
}

.type-list-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8faf8;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.type-list-item .type-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  margin-left: 16rpx;
}

.type-cal {
  font-size: 24rpx;
  color: #999;
  margin-right: 16rpx;
}

.type-delete {
  font-size: 28rpx;
  padding: 8rpx;
}

.add-type-form {
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.form-subtitle {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

.add-type-row {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.type-name-input {
  flex: 1;
  height: 72rpx;
  padding: 0 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.type-cal-input {
  width: 160rpx;
  height: 72rpx;
  padding: 0 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
  text-align: center;
}

.add-type-btn {
  height: 72rpx;
  padding: 0 32rpx;
  background: #43a047;
  color: #fff;
  font-size: 28rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
