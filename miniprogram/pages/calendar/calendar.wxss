/* pages/calendar/calendar.wxss - 3D极简科技版 */

.page-container {
  min-height: 100vh;
  padding: 0 var(--space-lg);
  box-sizing: border-box;
}

/* ================================ */
/*          Hero Section            */
/* ================================ */

.hero-section {
  position: relative;
  padding-top: 80rpx;
  padding-bottom: 40rpx;
  text-align: center;
}

.hero-bg-glow {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(79, 172, 254, 0.12) 0%, rgba(255, 255, 255, 0) 70%);
  filter: blur(80rpx);
  z-index: 0;
}

.hero-title {
  font-size: var(--font-size-xl);
  font-weight: 800;
  color: var(--tech-black);
  position: relative;
  z-index: 1;
}

.hero-subtitle {
  font-size: var(--font-size-xs);
  color: #BBB;
  letter-spacing: 4rpx;
  text-transform: uppercase;
  margin-top: 8rpx;
  font-weight: 500;
}

/* ================================ */
/*          Calendar Panel          */
/* ================================ */

.calendar-panel {
  padding: var(--space-lg);
  margin-bottom: var(--space-xl);
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-lg);
}

.month-nav {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: var(--tech-black);
  background: var(--tech-grey);
  border-radius: var(--radius-sm);
  font-weight: 800;
}

.current-date {
  font-size: var(--font-size-md);
  font-weight: 700;
  color: var(--tech-black);
}

.week-days {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  text-align: center;
  margin-bottom: var(--space-md);
}

.week-days text {
  font-size: var(--font-size-xs);
  color: #BBB;
  font-weight: 600;
}

.days-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 10rpx;
}

.day-item {
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  border-radius: var(--radius-md);
  transition: all 0.3s;
}

.day-item.not-current {
  opacity: 0.2;
}

.day-item.today {
  background: rgba(0, 0, 0, 0.03);
}

.day-item.today .day-num {
  color: var(--accent-blue);
  font-weight: 800;
}

.day-item.selected {
  background: var(--tech-black);
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.2);
}

.day-item.selected .day-num {
  color: var(--tech-white);
  font-weight: 800;
}

.day-num {
  font-size: var(--font-size-md);
  color: var(--tech-black);
  font-weight: 600;
}

.event-dots {
  position: absolute;
  bottom: 12rpx;
  display: flex;
  gap: 4rpx;
}

.dot {
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
}

/* ================================ */
/*          Event List              */
/* ================================ */

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-md);
}

.section-title {
  font-size: var(--font-size-lg);
  font-weight: 700;
  color: var(--tech-black);
}

.add-btn-mini {
  font-size: var(--font-size-sm);
  color: var(--tech-black);
  font-weight: 600;
  background: var(--tech-grey);
  padding: 12rpx 32rpx;
  border-radius: var(--radius-md);
}

.event-list {
  padding-bottom: var(--space-xl);
}

.event-item {
  display: flex;
  align-items: center;
  padding: var(--space-lg);
  margin-bottom: var(--space-sm);
  transition: all 0.3s;
}

.event-item:active {
  transform: scale(0.98);
}

.event-time-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: var(--space-lg);
  min-width: 100rpx;
}

.time-start {
  font-size: var(--font-size-sm);
  font-weight: 700;
  color: var(--tech-black);
  margin-bottom: 8rpx;
}

.time-line {
  width: 4rpx;
  height: 40rpx;
  border-radius: 2rpx;
}

.event-content {
  flex: 1;
}

.event-title {
  font-size: var(--font-size-md);
  font-weight: 700;
  color: var(--tech-black);
  display: block;
  margin-bottom: 6rpx;
}

.event-meta {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
}

.event-location {
  font-size: var(--font-size-xs);
  color: var(--text-grey);
}

.event-category {
  font-size: var(--font-size-xs);
  font-weight: 600;
}

.arrow {
  font-size: 40rpx;
  color: #DDD;
}

.empty-tip {
  text-align: center;
  padding: var(--space-xxl) 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: var(--space-md);
  opacity: 0.3;
}

.empty-tip text {
  font-size: var(--font-size-sm);
  color: #BBB;
}

/* ================================ */
/*          Modal Styles            */
/* ================================ */

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(10rpx);
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.modal-mask.show {
  visibility: visible;
  opacity: 1;
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 60rpx 60rpx 0 0;
  padding: var(--space-xl);
  padding-bottom: calc(var(--space-xl) + var(--safe-bottom-height));
  transform: translateY(100%);
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  max-height: 90vh;
  display: flex;
  flex-direction: column;
}

.modal-content.show {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-xl);
}

.modal-title {
  font-size: var(--font-size-xl);
  font-weight: 800;
  color: var(--tech-black);
}

.close-btn {
  font-size: 60rpx;
  color: #DDD;
  line-height: 1;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
}

.form-item {
  margin-bottom: var(--space-xl);
}

.form-label {
  font-size: var(--font-size-sm);
  font-weight: 700;
  color: var(--tech-black);
  margin-bottom: var(--space-md);
  display: block;
}

.form-input {
  background: var(--tech-grey);
  height: 100rpx;
  border-radius: var(--radius-md);
  padding: 0 var(--space-lg);
  font-size: var(--font-size-md);
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: var(--space-sm);
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--space-md) 0;
  background: var(--tech-grey);
  border-radius: var(--radius-md);
  transition: all 0.3s;
  border: 2rpx solid transparent;
}

.category-item.active {
  background: var(--cat-color);
  box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.1);
}

.category-item.active text {
  color: #FFF;
}

.cat-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-bottom: 8rpx;
}

.category-item.active .cat-dot {
  background: #FFF !important;
}

.category-item text {
  font-size: var(--font-size-xs);
  font-weight: 600;
  color: #888;
}

.form-row {
  display: flex;
  gap: var(--space-lg);
}

.half {
  flex: 1;
}

.picker-val {
  background: var(--tech-grey);
  height: 100rpx;
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  padding: 0 var(--space-lg);
  font-size: var(--font-size-md);
  font-weight: 600;
}

.form-textarea {
  background: var(--tech-grey);
  width: 100%;
  height: 200rpx;
  border-radius: var(--radius-md);
  padding: var(--space-lg);
  box-sizing: border-box;
  font-size: var(--font-size-md);
}

.modal-footer {
  padding-top: var(--space-xl);
}

.submit-btn {
  width: 100%;
}

/* 详情弹窗特有样式 */
.detail-main {
  margin-bottom: var(--space-xl);
}

.detail-category-tag {
  display: inline-block;
  padding: 8rpx 24rpx;
  border-radius: var(--radius-sm);
  font-size: var(--font-size-xs);
  color: #FFF;
  font-weight: 700;
  margin-bottom: var(--space-sm);
}

.detail-title {
  font-size: var(--font-size-xl);
  font-weight: 800;
  color: var(--tech-black);
  display: block;
}

.detail-info-list {
  background: var(--tech-grey);
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
}

.detail-info-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: var(--space-md);
}

.detail-info-item:last-child {
  margin-bottom: 0;
}

.info-icon {
  font-size: var(--font-size-md);
  margin-right: var(--space-md);
}

.info-text {
  font-size: var(--font-size-md);
  color: #666;
  line-height: 1.5;
}

.detail-footer {
  display: flex;
  gap: var(--space-lg);
}

.delete-btn {
  flex: 1;
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFF;
  border: 2rpx solid #EEE;
  color: #ff4d4f;
  border-radius: 55rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.edit-btn {
  flex: 2;
}