/* pages/workbench/workbench.wxss - 3D极简科技版 */

.page-container {
  min-height: 100vh;
  background: #F8F9FB;
  padding: 0 40rpx;
  box-sizing: border-box;
}

/* ================================ */
/*          Hero Section            */
/* ================================ */

.hero-section {
  position: relative;
  padding-top: 100rpx;
  padding-bottom: 60rpx;
}

.hero-bg-glow {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 500rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(78, 140, 255, 0.1) 0%, rgba(255, 255, 255, 0) 70%);
  filter: blur(60rpx);
  z-index: 0;
}

.welcome-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 1;
}

.greeting {
  font-size: 48rpx;
  font-weight: 800;
  color: #1A1A1A;
  display: block;
}

.role-badge {
  display: inline-flex;
  padding: 6rpx 20rpx;
  background: #000;
  border-radius: 20rpx;
  margin-top: 12rpx;
}

.role-text {
  font-size: 20rpx;
  color: #FFF;
  font-weight: 600;
  text-transform: uppercase;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  border: 4rpx solid #FFF;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.05);
}

/* ================================ */
/*          Summary Card            */
/* ================================ */

.summary-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 50rpx 40rpx;
  margin-bottom: 60rpx;
}

.summary-label {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 8rpx;
}

.summary-value {
  font-size: 64rpx;
  font-weight: 800;
  color: #1A1A1A;
}

.summary-icon {
  font-size: 80rpx;
  opacity: 0.1;
}

/* ================================ */
/*          Section Title           */
/* ================================ */

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1A1A1A;
  margin-bottom: 30rpx;
}

/* ================================ */
/*          Pending List            */
/* ================================ */

.pending-list {
  margin-bottom: 60rpx;
}

.pending-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.pending-icon {
  font-size: 44rpx;
  margin-right: 24rpx;
  width: 80rpx;
  height: 80rpx;
  background: #F0F2F5;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 24rpx;
}

.pending-content {
  flex: 1;
}

.pending-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1A1A1A;
  display: block;
}

.pending-desc {
  font-size: 22rpx;
  color: #999;
}

.pending-badge {
  background: #FF4D4F;
  color: #FFF;
  font-size: 20rpx;
  font-weight: 700;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin-right: 12rpx;
}

.arrow {
  color: #CCC;
  font-size: 32rpx;
}

/* ================================ */
/*          Tools Grid              */
/* ================================ */

.tools-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding-bottom: 60rpx;
}

.tool-card {
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tool-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.tool-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
}

/* ================================ */
/*          Common Glass            */
/* ================================ */

.glass-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(40rpx);
  -webkit-backdrop-filter: blur(40rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.03);
}

.success-pop {
  animation: pop 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

@keyframes pop {
  0% { transform: scale(0.9); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}
