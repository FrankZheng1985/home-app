/* pages/workbench/workbench.wxss */

.workbench-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #E8F4FD 0%, #F8FAFC 20%);
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
}

/* 加载状态 */
.loading-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #E8ECEF;
  border-top-color: #4A90D9;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #636E72;
}

/* 空状态 */
.not-logged-in,
.no-family,
.not-admin {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  padding: 60rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #2D3436;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #636E72;
  text-align: center;
  margin-bottom: 40rpx;
}

.login-btn {
  padding: 24rpx 80rpx;
  background: linear-gradient(135deg, #4A90D9 0%, #667eea 100%);
  border-radius: 40rpx;
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(74, 144, 217, 0.3);
}

.login-btn::after {
  border: none;
}

/* 浮动动画 */
@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

.animate-float {
  animation: float 3s ease-in-out infinite;
}

/* 头部 */
.workbench-header {
  position: relative;
  padding-bottom: 30rpx;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 320rpx;
  background: linear-gradient(135deg, #4A90D9 0%, #667eea 100%);
  border-radius: 0 0 60rpx 60rpx;
}

.header-content {
  position: relative;
  padding: 40rpx 30rpx 0;
  z-index: 1;
}

.welcome-section {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.welcome-text {
  display: flex;
  flex-direction: column;
}

.greeting {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 12rpx;
}

.role-badge {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.2);
}

.role-badge.creator {
  background: rgba(255, 215, 0, 0.3);
}

.role-badge.admin {
  background: rgba(255, 255, 255, 0.2);
}

.role-icon {
  font-size: 24rpx;
  margin-right: 6rpx;
}

.role-text {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

/* 待处理统计 */
.pending-summary {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  padding: 30rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(74, 144, 217, 0.2);
}

.summary-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.summary-info {
  display: flex;
  flex-direction: column;
}

.summary-title {
  font-size: 26rpx;
  color: #636E72;
  margin-bottom: 4rpx;
}

.summary-count {
  font-size: 40rpx;
  font-weight: 700;
  color: #4A90D9;
}

/* 区块 */
.section {
  padding: 30rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2D3436;
}

/* 待审核卡片 */
.pending-cards {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.pending-card {
  display: flex;
  align-items: center;
  background: #ffffff;
  padding: 28rpx 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.pending-card:active {
  transform: scale(0.98);
}

.pending-icon-wrap {
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.chore-bg {
  background: linear-gradient(135deg, rgba(56, 239, 125, 0.15) 0%, rgba(17, 153, 142, 0.15) 100%);
}

.savings-bg {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.15) 0%, rgba(118, 75, 162, 0.15) 100%);
}

.redeem-bg {
  background: linear-gradient(135deg, rgba(255, 215, 0, 0.15) 0%, rgba(255, 152, 0, 0.15) 100%);
}

.pending-emoji {
  font-size: 40rpx;
}

.pending-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.pending-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #2D3436;
  margin-bottom: 4rpx;
}

.pending-desc {
  font-size: 24rpx;
  color: #636E72;
}

.pending-badge {
  min-width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 16rpx;
  margin-right: 12rpx;
}

.pending-badge text {
  font-size: 24rpx;
  font-weight: 600;
  color: #ffffff;
}

.pending-arrow {
  font-size: 36rpx;
  color: #B2BEC3;
}

/* 快捷操作 */
.quick-actions {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.action-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #ffffff;
  padding: 30rpx 20rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.action-card:active {
  transform: scale(0.98);
}

.action-icon-wrap {
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.member-bg {
  background: linear-gradient(135deg, rgba(74, 144, 217, 0.15) 0%, rgba(102, 126, 234, 0.15) 100%);
}

.reward-bg {
  background: linear-gradient(135deg, rgba(240, 147, 251, 0.15) 0%, rgba(245, 87, 108, 0.15) 100%);
}

.points-bg {
  background: linear-gradient(135deg, rgba(56, 239, 125, 0.15) 0%, rgba(17, 153, 142, 0.15) 100%);
}

.sports-bg {
  background: linear-gradient(135deg, rgba(255, 107, 107, 0.15) 0%, rgba(255, 142, 83, 0.15) 100%);
}

.action-emoji {
  font-size: 40rpx;
}

.action-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3436;
  margin-bottom: 4rpx;
}

.action-desc {
  font-size: 22rpx;
  color: #636E72;
}

/* 提示区域 */
.tips-section {
  padding: 0 30rpx 30rpx;
}

.tips-card {
  display: flex;
  align-items: flex-start;
  background: linear-gradient(135deg, rgba(74, 144, 217, 0.1) 0%, rgba(102, 126, 234, 0.1) 100%);
  padding: 24rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(74, 144, 217, 0.2);
}

.tips-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.tips-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.tips-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #4A90D9;
  margin-bottom: 6rpx;
}

.tips-text {
  font-size: 24rpx;
  color: #636E72;
  line-height: 1.5;
}
