/* pages/register/register.wxss */

.register-container {
  padding-top: 40rpx;
}

/* 步骤指示器 */
.step-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 60rpx;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.step-dot {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: var(--border-color);
  color: var(--text-placeholder);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s;
}

.step.active .step-dot {
  background-color: var(--primary-color);
  color: #fff;
}

.step-label {
  font-size: 24rpx;
  color: var(--text-placeholder);
  margin-top: 12rpx;
}

.step.active .step-label {
  color: var(--primary-color);
}

.step-line {
  width: 100rpx;
  height: 4rpx;
  background-color: var(--border-color);
  margin: 0 20rpx;
  margin-bottom: 36rpx;
  transition: all 0.3s;
}

.step-line.active {
  background-color: var(--primary-color);
}

/* 步骤内容 */
.step-content {
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.step-title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
  text-align: center;
}

.step-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
  text-align: center;
  margin-top: 12rpx;
  margin-bottom: 50rpx;
}

/* 头像选择 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar-btn {
  position: relative;
  background: none;
  border: none;
  padding: 0;
}

.avatar-btn::after {
  border: none;
}

.avatar-img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 6rpx solid var(--primary-light);
}

.avatar-edit-icon {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 56rpx;
  height: 56rpx;
  background-color: var(--primary-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border: 4rpx solid #fff;
}

.avatar-tip {
  font-size: 26rpx;
  color: var(--text-placeholder);
  margin-top: 16rpx;
}

/* 表单 */
.form-section {
  margin-bottom: 40rpx;
}

.form-section.card {
  padding: 0 !important;
}

.form-group {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.form-group:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
}

.required {
  color: var(--error-color);
}

.form-input {
  width: 100%;
  height: 88rpx;
  background-color: var(--background-color);
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.picker-value {
  height: 88rpx;
  line-height: 88rpx;
  background-color: var(--background-color);
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
}

.picker-value.placeholder {
  color: var(--text-placeholder);
}

/* 表单操作 */
.form-actions {
  margin-top: 40rpx;
}

.skip-btn {
  text-align: center;
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-top: 30rpx;
  padding: 20rpx;
}
