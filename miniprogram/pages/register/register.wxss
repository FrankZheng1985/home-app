/* pages/register/register.wxss - 3D极简科技版 */

.page-container {
  min-height: 100vh;
  background: #F8F9FB;
  padding: 0 40rpx;
  box-sizing: border-box;
}

/* ================================ */
/*          Hero Section            */
/* ================================ */

.hero-section {
  position: relative;
  padding-top: 80rpx;
  padding-bottom: 40rpx;
  text-align: center;
}

.hero-bg-glow {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 500rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(240, 147, 251, 0.1) 0%, rgba(255, 255, 255, 0) 70%);
  filter: blur(60rpx);
  z-index: 0;
}

.avatar-upload {
  background: transparent;
  padding: 0;
  margin-bottom: 30rpx;
  display: inline-block;
  line-height: 0;
}

.avatar-upload::after { border: none; }

.avatar-wrapper {
  position: relative;
  width: 180rpx;
  height: 180rpx;
}

.avatar-img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;
  border: 6rpx solid #FFF;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.1);
}

.camera-badge {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 56rpx;
  height: 56rpx;
  background: #000;
  color: #FFF;
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  border: 4rpx solid #FFF;
}

.hero-title {
  font-size: 48rpx;
  font-weight: 800;
  color: #1A1A1A;
}

.hero-subtitle {
  font-size: 20rpx;
  color: #CCC;
  letter-spacing: 4rpx;
  text-transform: uppercase;
  margin-top: 8rpx;
}

/* ================================ */
/*          Form Card               */
/* ================================ */

.form-card {
  padding: 50rpx 40rpx;
  margin-bottom: 40rpx;
}

.form-group {
  margin-bottom: 40rpx;
}

.form-group:last-child { margin-bottom: 0; }

.form-label {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 20rpx;
}

.input-wrapper {
  background: #F0F2F5;
  border-radius: 24rpx;
  padding: 0 30rpx;
}

.form-input {
  height: 100rpx;
  font-size: 30rpx;
  color: #1A1A1A;
  font-weight: 600;
}

.gender-options {
  display: flex;
  gap: 20rpx;
}

.gender-item {
  flex: 1;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F0F2F5;
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #666;
  font-weight: 600;
  transition: all 0.3s;
}

.gender-item.active {
  background: #000;
  color: #FFF;
}

/* ================================ */
/*          Tags Grid               */
/* ================================ */

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1A1A1A;
  margin-bottom: 30rpx;
}

.tags-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 60rpx;
}

.tag-item {
  padding: 20rpx 36rpx;
  font-size: 26rpx;
  color: #666;
  font-weight: 600;
  border-radius: 30rpx;
  transition: all 0.3s;
}

.tag-item.selected {
  background: #000;
  color: #FFF;
  border-color: #000;
}

/* ================================ */
/*          Actions                 */
/* ================================ */

.action-section {
  padding-bottom: 40rpx;
}

.primary-btn {
  background: #000;
  color: #FFF;
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 55rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.15);
}

.primary-btn.disabled {
  background: #EEE;
  color: #CCC;
  box-shadow: none;
}

.skip-link {
  text-align: center;
  font-size: 26rpx;
  color: #CCC;
  margin-top: 40rpx;
}

/* ================================ */
/*          Common Glass            */
/* ================================ */

.glass-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(40rpx);
  -webkit-backdrop-filter: blur(40rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.03);
}

.success-pop {
  animation: pop 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

@keyframes pop {
  0% { transform: scale(0.9); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}
