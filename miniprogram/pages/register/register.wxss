/* pages/register/register.wxss - 精美设计版 */

.register-page {
  min-height: 100vh;
  background: #F8FAFC;
  padding-bottom: 60rpx;
}

/* 渐变头部 */
.page-header {
  position: relative;
  padding-bottom: 80rpx;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 360rpx;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  border-radius: 0 0 60rpx 60rpx;
}

.header-content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 80rpx;
}

/* 头像上传 */
.avatar-upload {
  background: transparent;
  border: none;
  padding: 0;
  line-height: normal;
}

.avatar-upload::after {
  border: none;
}

.avatar-wrapper {
  position: relative;
  width: 180rpx;
  height: 180rpx;
}

.avatar-img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.5);
}

.avatar-ring {
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  width: 200rpx;
  height: 200rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); opacity: 0.3; }
  50% { transform: scale(1.1); opacity: 0.5; }
}

.camera-badge {
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  width: 52rpx;
  height: 52rpx;
  background: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.avatar-hint {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 20rpx;
}

/* 隐私通知 */
.privacy-notice {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 24rpx 30rpx 0;
  padding: 20rpx 24rpx;
  background: rgba(7, 193, 96, 0.1);
  border-radius: 16rpx;
  border: 1rpx solid rgba(7, 193, 96, 0.2);
}

.notice-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.notice-text {
  font-size: 24rpx;
  color: #07C160;
  font-weight: 500;
}

/* 表单区域 */
.form-section {
  padding: 0 30rpx;
  margin-top: 24rpx;
  position: relative;
  z-index: 2;
}

.form-card {
  background: #ffffff;
  border-radius: 28rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 16rpx 48rpx rgba(240, 147, 251, 0.15);
}

.form-group {
  margin-bottom: 30rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.label-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3436;
}

.required-tag {
  font-size: 22rpx;
  color: #FF6B6B;
  background: rgba(255, 107, 107, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-left: 12rpx;
  font-weight: 500;
}

.optional-tag {
  font-size: 22rpx;
  color: #B2BEC3;
  background: #F1F3F4;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-left: 12rpx;
  font-weight: 500;
}

.field-hint {
  display: block;
  font-size: 22rpx;
  color: #B2BEC3;
  margin-top: 12rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background: #F8FAFC;
  border-radius: 20rpx;
  padding: 0 24rpx;
  border: 2rpx solid #E8ECEF;
  transition: all 0.3s;
}

.input-wrapper:focus-within {
  border-color: #f093fb;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(240, 147, 251, 0.1);
}

.input-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.form-input {
  flex: 1;
  height: 96rpx;
  font-size: 30rpx;
  color: #2D3436;
}

/* 性别选择 */
.gender-options {
  display: flex;
  gap: 16rpx;
}

.gender-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  background: #F8FAFC;
  border-radius: 20rpx;
  border: 2rpx solid #E8ECEF;
  transition: all 0.3s;
}

.gender-option.active.male {
  background: linear-gradient(135deg, rgba(79, 172, 254, 0.15) 0%, rgba(0, 242, 254, 0.15) 100%);
  border-color: #4facfe;
}

.gender-option.active.female {
  background: linear-gradient(135deg, rgba(240, 147, 251, 0.15) 0%, rgba(245, 87, 108, 0.15) 100%);
  border-color: #f093fb;
}

.gender-option.active.secret {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.15) 0%, rgba(118, 75, 162, 0.15) 100%);
  border-color: #667eea;
}

.gender-emoji {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.gender-text {
  font-size: 26rpx;
  color: #636E72;
}

.gender-option.active .gender-text {
  font-weight: 600;
  color: #2D3436;
}

/* 日期选择 */
.date-picker {
  display: flex;
  align-items: center;
  background: #F8FAFC;
  border-radius: 20rpx;
  padding: 0 24rpx;
  height: 96rpx;
  border: 2rpx solid #E8ECEF;
}

.date-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.date-value {
  flex: 1;
  font-size: 30rpx;
  color: #2D3436;
}

.date-value.placeholder {
  color: #B2BEC3;
}

.date-arrow {
  font-size: 32rpx;
  color: #B2BEC3;
}

/* 喜好标签卡片 */
.preferences-card {
  background: #ffffff;
  border-radius: 28rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2D3436;
}

.card-desc {
  display: block;
  font-size: 24rpx;
  color: #B2BEC3;
  margin-bottom: 24rpx;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #F8FAFC;
  border-radius: 30rpx;
  border: 2rpx solid #E8ECEF;
  transition: all 0.3s;
}

.tag-item.selected {
  background: linear-gradient(135deg, rgba(240, 147, 251, 0.15) 0%, rgba(245, 87, 108, 0.15) 100%);
  border-color: #f093fb;
}

.tag-emoji {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.tag-text {
  font-size: 26rpx;
  color: #636E72;
}

.tag-item.selected .tag-text {
  font-weight: 600;
  color: #f5576c;
}

/* 提交按钮 */
.action-section {
  padding: 40rpx 30rpx;
}

.submit-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 108rpx;
  background: #E8ECEF;
  border-radius: 54rpx;
  border: none;
  transition: all 0.3s;
}

.submit-btn::after {
  border: none;
}

.submit-btn.active {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  box-shadow: 0 12rpx 32rpx rgba(240, 147, 251, 0.4);
}

.btn-text {
  font-size: 34rpx;
  font-weight: 600;
  color: #B2BEC3;
}

.submit-btn.active .btn-text {
  color: #ffffff;
}

.skip-link {
  margin-top: 30rpx;
  text-align: center;
}

.skip-link text {
  font-size: 28rpx;
  color: #B2BEC3;
}
