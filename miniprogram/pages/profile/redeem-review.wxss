/* pages/profile/redeem-review.wxss - 3D极简科技版 */

.page-container {
  min-height: 100vh;
  background: #F8F9FB;
  padding: 0 40rpx;
  box-sizing: border-box;
}

/* ================================ */
/*          Hero Section            */
/* ================================ */

.hero-section {
  position: relative;
  padding-top: 100rpx;
  padding-bottom: 40rpx;
  text-align: center;
}

.hero-bg-glow {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 500rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(255, 142, 83, 0.1) 0%, rgba(255, 255, 255, 0) 70%);
  filter: blur(60rpx);
  z-index: 0;
}

.hero-title {
  font-size: 48rpx;
  font-weight: 800;
  color: #1A1A1A;
  position: relative;
  z-index: 1;
}

.hero-subtitle {
  font-size: 20rpx;
  color: #CCC;
  letter-spacing: 4rpx;
  text-transform: uppercase;
  margin-top: 8rpx;
  position: relative;
  z-index: 1;
}

/* ================================ */
/*          Tabs                    */
/* ================================ */

.tabs-wrapper {
  margin-bottom: 40rpx;
}

.tabs {
  display: flex;
  position: relative;
  height: 90rpx;
  padding: 8rpx;
  background: rgba(255, 255, 255, 0.6);
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #999;
  z-index: 2;
  transition: color 0.3s;
}

.tab-item.active {
  color: #FFF;
  font-weight: 600;
}

.tab-indicator {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  width: calc(25% - 8rpx);
  height: calc(100% - 16rpx);
  background: #000;
  border-radius: 32rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 1;
}

.tab-indicator.pos-2 { transform: translateX(100%); }
.tab-indicator.pos-3 { transform: translateX(200%); }
.tab-indicator.pos-4 { transform: translateX(300%); }

/* ================================ */
/*          Request List            */
/* ================================ */

.requests-list {
  padding-bottom: 40rpx;
}

.request-item {
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.request-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.user-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
  margin-right: 20rpx;
  border: 2rpx solid #FFF;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 26rpx;
  font-weight: 700;
  color: #1A1A1A;
  display: block;
}

.request-time {
  font-size: 20rpx;
  color: #CCC;
}

.request-status {
  font-size: 20rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  background: #F0F2F5;
  color: #999;
}

.request-status.pending { background: #FFF3E0; color: #FF9800; }
.request-status.approved { background: #E8F5E9; color: #4CAF50; }
.request-status.rejected { background: #FFEBEE; color: #F44336; }

.request-body {
  padding-left: 90rpx;
}

.request-main {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.points-value {
  font-size: 36rpx;
  font-weight: 800;
  color: #1A1A1A;
}

.amount-value {
  font-size: 24rpx;
  color: #666;
  font-weight: 600;
}

.request-remark {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

.review-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid rgba(0,0,0,0.02);
}

.action-btn {
  background: #000;
  color: #FFF;
  font-size: 24rpx;
  font-weight: 600;
  padding: 12rpx 40rpx;
  border-radius: 30rpx;
}

.empty-tip {
  text-align: center;
  font-size: 24rpx;
  color: #CCC;
  padding: 60rpx 0;
}

/* ================================ */
/*          Common Glass            */
/* ================================ */

.glass-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(40rpx);
  -webkit-backdrop-filter: blur(40rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.03);
}

.success-pop {
  animation: pop 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

@keyframes pop {
  0% { transform: scale(0.9); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}
