/* pages/profile/feedback.wxss - 3D极简科技版 */

.page-container {
  min-height: 100vh;
  background: #F8F9FB;
  padding: 0 40rpx;
  box-sizing: border-box;
}

/* ================================ */
/*          Hero Section            */
/* ================================ */

.hero-section {
  position: relative;
  padding-top: 100rpx;
  padding-bottom: 60rpx;
  text-align: center;
}

.hero-bg-glow {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 500rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(78, 140, 255, 0.1) 0%, rgba(255, 255, 255, 0) 70%);
  filter: blur(60rpx);
  z-index: 0;
}

.hero-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  display: inline-block;
  filter: drop-shadow(0 20rpx 40rpx rgba(0,0,0,0.1));
}

.hero-title {
  font-size: 48rpx;
  font-weight: 800;
  color: #1A1A1A;
}

.hero-subtitle {
  font-size: 20rpx;
  color: #CCC;
  letter-spacing: 4rpx;
  text-transform: uppercase;
  margin-top: 8rpx;
}

/* ================================ */
/*          Form Card               */
/* ================================ */

.form-card {
  padding: 60rpx 40rpx;
  margin-bottom: 60rpx;
}

.form-group {
  margin-bottom: 40rpx;
}

.form-group:last-child { margin-bottom: 0; }

.form-label {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 20rpx;
}

.input-wrapper {
  background: #F0F2F5;
  border-radius: 24rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  height: 100rpx;
}

.picker-wrapper {
  justify-content: space-between;
}

.picker-value {
  font-size: 28rpx;
  color: #1A1A1A;
  font-weight: 600;
}

.picker-value.placeholder {
  color: #CCC;
  font-weight: 400;
}

.arrow {
  font-size: 20rpx;
  color: #CCC;
}

.textarea-wrapper {
  background: #F0F2F5;
  border-radius: 24rpx;
  padding: 30rpx;
  position: relative;
}

.form-textarea {
  width: 100%;
  height: 300rpx;
  font-size: 28rpx;
  color: #1A1A1A;
  line-height: 1.6;
}

.char-count {
  position: absolute;
  bottom: 20rpx;
  right: 30rpx;
  font-size: 20rpx;
  color: #CCC;
}

/* ================================ */
/*          Actions                 */
/* ================================ */

.action-section {
  padding-bottom: 40rpx;
}

.primary-btn {
  background: #000;
  color: #FFF;
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 55rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.15);
}

.primary-btn.disabled {
  background: #EEE;
  color: #CCC;
  box-shadow: none;
}

.tips-text {
  text-align: center;
  font-size: 24rpx;
  color: #CCC;
  margin-top: 40rpx;
  display: block;
}

/* ================================ */
/*          Common Glass            */
/* ================================ */

.glass-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(40rpx);
  -webkit-backdrop-filter: blur(40rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.03);
}

.success-pop {
  animation: pop 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

@keyframes pop {
  0% { transform: scale(0.9); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}
