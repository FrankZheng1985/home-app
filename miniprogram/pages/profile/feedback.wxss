/* pages/profile/feedback.wxss */

.feedback-container {
  padding-top: 20rpx;
}

.form-section {
  padding: 0;
}

.form-group {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.form-group:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
  display: block;
}

.required {
  color: var(--error-color);
}

.form-input {
  width: 100%;
  height: 88rpx;
  background-color: var(--background-color);
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  min-height: 240rpx;
  background-color: var(--background-color);
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  line-height: 1.6;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  margin-top: 12rpx;
}

.picker-value {
  height: 88rpx;
  line-height: 88rpx;
  background-color: var(--background-color);
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
}

.picker-value.placeholder {
  color: var(--text-placeholder);
}

.action-section {
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.tips-section {
  text-align: center;
  padding: 40rpx;
  font-size: 26rpx;
}
