/* pages/profile/preferences.wxss */

.preferences-container {
  padding-top: 40rpx;
}

.header-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.header-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.header-desc {
  font-size: 28rpx;
}

.form-section {
  padding: 0;
}

.form-group {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.form-group:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
  display: block;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background-color: var(--background-color);
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.picker-value {
  height: 88rpx;
  line-height: 88rpx;
  background-color: var(--background-color);
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
}

.picker-value.placeholder {
  color: var(--text-placeholder);
}

.action-section {
  margin-top: 60rpx;
  padding: 0 20rpx;
}
