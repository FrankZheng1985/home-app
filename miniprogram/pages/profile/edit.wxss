/* pages/profile/edit.wxss - 3D极简科技版 */

.page-container {
  min-height: 100vh;
  padding: 0 var(--space-lg);
  box-sizing: border-box;
}

/* ================================ */
/*          Hero Section            */
/* ================================ */

.hero-section {
  position: relative;
  padding-top: 80rpx;
  padding-bottom: 40rpx;
  text-align: center;
}

.hero-bg-glow {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(78, 140, 255, 0.12) 0%, rgba(255, 255, 255, 0) 70%);
  filter: blur(80rpx);
  z-index: 0;
}

.avatar-upload {
  background: transparent;
  padding: 0;
  margin-bottom: var(--space-lg);
  display: inline-block;
  line-height: 0;
  overflow: visible;
}

.avatar-upload::after { border: none; }

.avatar-wrapper {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.avatar-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  border: 8rpx solid var(--tech-white);
  box-shadow: var(--shadow-md);
}

.camera-badge {
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  width: 64rpx;
  height: 64rpx;
  background: var(--tech-black);
  color: var(--tech-white);
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border: 6rpx solid var(--tech-white);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.2);
}

.hero-title {
  font-size: var(--font-size-xl);
  font-weight: 800;
  color: var(--tech-black);
}

.hero-subtitle {
  font-size: var(--font-size-xs);
  color: #BBB;
  letter-spacing: 4rpx;
  text-transform: uppercase;
  margin-top: 8rpx;
  font-weight: 500;
}

/* ================================ */
/*          Form Card               */
/* ================================ */

.form-card {
  padding: var(--space-xl) var(--space-lg);
  margin-bottom: var(--space-lg);
}

.form-group {
  margin-bottom: var(--space-lg);
}

.form-group:last-child { margin-bottom: 0; }

.form-label {
  font-size: var(--font-size-sm);
  color: var(--text-grey);
  display: block;
  margin-bottom: var(--space-sm);
  font-weight: 500;
}

.input-wrapper {
  background: var(--tech-grey);
  border-radius: var(--radius-md);
  padding: 0 var(--space-md);
  display: flex;
  align-items: center;
  border: 1rpx solid rgba(0,0,0,0.02);
}

.form-input {
  flex: 1;
  height: 110rpx;
  font-size: var(--font-size-md);
  color: var(--tech-black);
  font-weight: 600;
}

.gender-options {
  display: flex;
  gap: var(--space-sm);
}

.gender-item {
  flex: 1;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--tech-grey);
  border-radius: var(--radius-md);
  font-size: var(--font-size-sm);
  color: var(--text-grey);
  font-weight: 600;
  transition: all 0.3s;
  border: 1rpx solid rgba(0,0,0,0.02);
}

.gender-item.active {
  background: var(--tech-black);
  color: var(--tech-white);
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.1);
}

.date-picker {
  height: 110rpx;
  justify-content: space-between;
}

.date-value {
  font-size: var(--font-size-md);
  color: var(--tech-black);
  font-weight: 600;
}

.date-value.placeholder {
  color: #BBB;
  font-weight: 400;
}

.date-arrow {
  color: #BBB;
  font-size: 36rpx;
}

/* ================================ */
/*          Actions                 */
/* ================================ */

.action-section {
  padding-bottom: var(--space-xl);
}

.primary-btn {
  background: var(--tech-black);
  color: var(--tech-white);
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-full);
  font-size: var(--font-size-lg);
  font-weight: 700;
  box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.15);
  transition: all 0.3s;
}

.primary-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.primary-btn.disabled {
  background: var(--tech-grey);
  color: #CCC;
  box-shadow: none;
}

/* ================================ */
/*          Common Glass            */
/* ================================ */

.glass-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(40rpx);
  -webkit-backdrop-filter: blur(40rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.03);
}

.success-pop {
  animation: pop 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

@keyframes pop {
  0% { transform: scale(0.9); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}
