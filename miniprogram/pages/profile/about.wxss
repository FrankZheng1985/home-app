/* pages/profile/about.wxss - 3D极简科技版 */

.page-container {
  min-height: 100vh;
  background: #F8F9FB;
  padding: 0 40rpx;
  box-sizing: border-box;
}

/* ================================ */
/*          Hero Section            */
/* ================================ */

.hero-section {
  position: relative;
  padding-top: 100rpx;
  padding-bottom: 60rpx;
  text-align: center;
}

.hero-bg-glow {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 500rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(78, 140, 255, 0.1) 0%, rgba(255, 255, 255, 0) 70%);
  filter: blur(60rpx);
  z-index: 0;
}

.hero-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  display: inline-block;
  filter: drop-shadow(0 20rpx 40rpx rgba(0,0,0,0.1));
}

.hero-title {
  font-size: 48rpx;
  font-weight: 800;
  color: #1A1A1A;
}

.hero-subtitle {
  font-size: 20rpx;
  color: #CCC;
  letter-spacing: 4rpx;
  text-transform: uppercase;
  margin-top: 8rpx;
}

/* ================================ */
/*          Feature List            */
/* ================================ */

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1A1A1A;
  margin-bottom: 30rpx;
}

.feature-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 60rpx;
}

.feature-item {
  padding: 30rpx;
  display: flex;
  align-items: center;
}

.feature-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.feature-info {
  flex: 1;
}

.feature-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #1A1A1A;
  display: block;
}

.feature-desc {
  font-size: 22rpx;
  color: #999;
}

/* ================================ */
/*          Contact Card            */
/* ================================ */

.contact-card {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 60rpx;
}

.contact-label {
  font-size: 26rpx;
  color: #999;
  display: block;
  margin-bottom: 4rpx;
}

.contact-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #1A1A1A;
}

.copy-icon {
  font-size: 32rpx;
  color: #CCC;
}

/* ================================ */
/*          Copyright               */
/* ================================ */

.copyright-section {
  text-align: center;
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.copyright-section text {
  font-size: 20rpx;
  color: #CCC;
}

/* ================================ */
/*          Common Glass            */
/* ================================ */

.glass-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(40rpx);
  -webkit-backdrop-filter: blur(40rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.03);
}

.success-pop {
  animation: pop 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

@keyframes pop {
  0% { transform: scale(0.9); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}
