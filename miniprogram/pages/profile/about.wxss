/* pages/profile/about.wxss */

.about-container {
  padding-top: 60rpx;
}

/* 头部 */
.header-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.app-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.app-name {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.app-version {
  font-size: 26rpx;
}

/* 功能介绍 */
.features-section {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
}

.feature-list {
  margin-top: 20rpx;
}

.feature-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
}

.feature-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.feature-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.feature-title {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 6rpx;
}

.feature-desc {
  font-size: 26rpx;
  line-height: 1.4;
}

/* 联系我们 */
.contact-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.contact-label {
  font-size: 30rpx;
  color: var(--text-primary);
}

.contact-value {
  font-size: 28rpx;
}

/* 版权信息 */
.copyright {
  text-align: center;
  padding: 60rpx 0;
  font-size: 24rpx;
  line-height: 1.8;
}
