<!--pages/profile/feedback.wxml - 3D极简科技版-->
<view class="page-container">
  <!-- 头部区域 -->
  <view class="hero-section">
    <view class="hero-bg-glow"></view>
    <view class="hero-content page-fade-in">
      <view class="hero-icon">💬</view>
      <view class="hero-title">意见反馈</view>
      <view class="hero-subtitle">Help Us Improve</view>
    </view>
  </view>

  <!-- 表单卡片 -->
  <view class="glass-card form-card success-pop">
    <view class="form-group">
      <text class="form-label">反馈类型</text>
      <picker mode="selector" range="{{typeOptions}}" bindchange="onTypeChange">
        <view class="input-wrapper picker-wrapper">
          <text class="picker-value {{feedbackType ? '' : 'placeholder'}}">
            {{feedbackType || '请选择反馈类型'}}
          </text>
          <text class="arrow">▼</text>
        </view>
      </picker>
    </view>

    <view class="form-group">
      <text class="form-label">反馈内容</text>
      <view class="textarea-wrapper">
        <textarea 
          class="form-textarea" 
          placeholder="请详细描述您的问题或建议..."
          value="{{feedbackContent}}"
          bindinput="onContentInput"
          maxlength="500"
        ></textarea>
        <text class="char-count">{{feedbackContent.length}}/500</text>
      </view>
    </view>
  </view>

  <!-- 提交按钮 -->
  <view class="action-section">
    <view class="primary-btn btn-active-feedback {{feedbackType && feedbackContent.length >= 5 ? '' : 'disabled'}}" bindtap="{{feedbackType && feedbackContent.length >= 5 ? 'submitFeedback' : ''}}">
      <text>{{isSubmitting ? '正在提交...' : '提交反馈'}}</text>
    </view>
    <text class="tips-text">感谢您的反馈，我们会认真阅读每一条建议！</text>
  </view>

  <view class="safe-bottom"></view>
</view>
