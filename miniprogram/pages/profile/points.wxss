/* pages/profile/points.wxss - 精美设计版 */

.points-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF5E6 0%, #F8FAFC 30%);
  padding-bottom: 60rpx;
}

/* 积分概览卡片 */
.summary-card {
  margin: 30rpx;
  border-radius: 32rpx;
  overflow: hidden;
  position: relative;
}

.summary-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #FFD93D 0%, #FF8E53 100%);
}

.summary-content {
  position: relative;
  z-index: 1;
  padding: 40rpx;
}

.summary-main {
  text-align: center;
  margin-bottom: 40rpx;
}

.total-label {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 12rpx;
}

.total-points {
  display: block;
  font-size: 80rpx;
  font-weight: 700;
  color: #ffffff;
  text-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.summary-stats {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
  padding: 24rpx 0;
  backdrop-filter: blur(10rpx);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
}

.coin-icon {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  font-size: 80rpx;
  opacity: 0.3;
  transform: rotate(15deg);
}

/* 区域标题 */
.section-header {
  padding: 30rpx 30rpx 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2D3436;
}

/* 交易列表 */
.transactions-list {
  padding: 0 30rpx;
}

.transaction-card {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.transaction-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 20rpx;
}

.transaction-icon.earn {
  background: linear-gradient(135deg, rgba(82, 196, 26, 0.15) 0%, rgba(56, 239, 125, 0.15) 100%);
}

.transaction-icon.spend {
  background: linear-gradient(135deg, rgba(255, 77, 79, 0.15) 0%, rgba(255, 142, 83, 0.15) 100%);
}

.transaction-info {
  flex: 1;
  min-width: 0;
}

.transaction-title {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: #2D3436;
  margin-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.transaction-time {
  font-size: 24rpx;
  color: #B2BEC3;
}

.transaction-points {
  font-size: 36rpx;
  font-weight: 700;
}

.transaction-points.positive {
  color: #52C41A;
}

.transaction-points.negative {
  color: #FF4D4F;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-15rpx); }
}

.animate-float {
  animation: float 3s ease-in-out infinite;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2D3436;
  margin-bottom: 8rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #B2BEC3;
}

/* 加载更多 */
.load-more, .no-more {
  text-align: center;
  padding: 30rpx;
  font-size: 26rpx;
  color: #B2BEC3;
}
