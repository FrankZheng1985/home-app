/* pages/profile/points.wxss - 3D极简科技版 */

.page-container {
  min-height: 100vh;
  background: #F8F9FB;
  padding: 0 40rpx;
  box-sizing: border-box;
}

/* ================================ */
/*          Hero Section            */
/* ================================ */

.hero-section {
  position: relative;
  padding-top: 100rpx;
  padding-bottom: 40rpx;
  text-align: center;
}

.hero-bg-glow {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 500rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(255, 217, 61, 0.1) 0%, rgba(255, 255, 255, 0) 70%);
  filter: blur(60rpx);
  z-index: 0;
}

.hero-title {
  font-size: 48rpx;
  font-weight: 800;
  color: #1A1A1A;
  position: relative;
  z-index: 1;
}

.hero-subtitle {
  font-size: 20rpx;
  color: #CCC;
  letter-spacing: 4rpx;
  text-transform: uppercase;
  margin-top: 8rpx;
  position: relative;
  z-index: 1;
}

/* ================================ */
/*          Summary Card            */
/* ================================ */

.summary-card {
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 40rpx;
}

.summary-main {
  margin-bottom: 40rpx;
}

.total-label {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 16rpx;
}

.total-value {
  font-size: 100rpx;
  font-weight: 800;
  color: #1A1A1A;
  display: block;
  margin-bottom: 30rpx;
}

.redeem-btn {
  display: inline-block;
  background: #000;
  color: #FFF;
  font-size: 24rpx;
  font-weight: 600;
  padding: 16rpx 40rpx;
  border-radius: 30rpx;
}

.stat-row {
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid rgba(0,0,0,0.03);
  padding-top: 40rpx;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-label {
  font-size: 20rpx;
  color: #CCC;
  display: block;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #333;
}

.stat-divider {
  width: 2rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.03);
}

/* ================================ */
/*          Notice Card             */
/* ================================ */

.notice-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 40rpx;
  background: rgba(255, 77, 79, 0.05);
  border-color: rgba(255, 77, 79, 0.1);
}

.notice-content {
  display: flex;
  align-items: center;
}

.notice-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.notice-text {
  font-size: 26rpx;
  color: #FF4D4F;
  font-weight: 600;
}

.arrow {
  color: #CCC;
  font-size: 32rpx;
}

/* ================================ */
/*          Section Header          */
/* ================================ */

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1A1A1A;
}

.filter-tabs {
  display: flex;
  gap: 12rpx;
}

.filter-item {
  font-size: 22rpx;
  color: #999;
  background: #F0F2F5;
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  font-weight: 600;
}

.filter-item.active {
  background: #000;
  color: #FFF;
}

/* ================================ */
/*          Transactions            */
/* ================================ */

.transactions-list {
  padding-bottom: 40rpx;
}

.transaction-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.trans-icon {
  width: 80rpx;
  height: 80rpx;
  background: #F0F2F5;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 24rpx;
}

.trans-info {
  flex: 1;
}

.trans-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #333;
  display: block;
}

.trans-time {
  font-size: 22rpx;
  color: #CCC;
}

.trans-points {
  font-size: 32rpx;
  font-weight: 800;
}

.trans-points.positive { color: #52C41A; }
.trans-points.negative { color: #FF4D4F; }

.empty-tip {
  text-align: center;
  font-size: 24rpx;
  color: #CCC;
  padding: 60rpx 0;
}

/* ================================ */
/*          Common Glass            */
/* ================================ */

.glass-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(40rpx);
  -webkit-backdrop-filter: blur(40rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.03);
}

.success-pop {
  animation: pop 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

@keyframes pop {
  0% { transform: scale(0.9); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}
