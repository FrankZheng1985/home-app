/* pages/profile/points.wxss - 积分统计页面 */

.points-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF5E6 0%, #F8FAFC 30%);
  padding-bottom: 60rpx;
}

/* 积分概览卡片 */
.summary-card {
  margin: 30rpx;
  border-radius: 32rpx;
  overflow: hidden;
  position: relative;
}

.summary-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #FFD93D 0%, #FF8E53 100%);
}

.summary-content {
  position: relative;
  z-index: 1;
  padding: 40rpx;
}

.summary-main {
  text-align: center;
  margin-bottom: 40rpx;
}

.total-label {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 12rpx;
}

.total-points {
  display: block;
  font-size: 80rpx;
  font-weight: 700;
  color: #ffffff;
  text-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.summary-stats {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
  padding: 24rpx 0;
  backdrop-filter: blur(10rpx);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
}

.coin-icon {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  font-size: 80rpx;
  opacity: 0.3;
  transform: rotate(15deg);
}

/* 区域卡片 */
.section-card {
  margin: 30rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.section-header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2D3436;
}

/* 月份选择器 */
.month-picker {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: #F5F5F5;
  border-radius: 20rpx;
}

.month-text {
  font-size: 26rpx;
  color: #636E72;
  margin-right: 8rpx;
}

.month-arrow {
  font-size: 20rpx;
  color: #B2BEC3;
}

/* 月度统计 */
.month-stats {
  display: flex;
  gap: 20rpx;
}

.month-stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  border-radius: 16rpx;
}

.month-stat-item.earned {
  background: linear-gradient(135deg, rgba(82, 196, 26, 0.1) 0%, rgba(56, 239, 125, 0.1) 100%);
}

.month-stat-item.redeemed {
  background: linear-gradient(135deg, rgba(255, 142, 83, 0.1) 0%, rgba(255, 77, 79, 0.1) 100%);
}

.month-stat-item.balance {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
}

.stat-icon {
  font-size: 40rpx;
  margin-bottom: 12rpx;
}

.stat-detail {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 700;
  color: #2D3436;
  margin-bottom: 4rpx;
}

.stat-desc {
  font-size: 22rpx;
  color: #636E72;
}

/* 结算功能 */
.settlement-info {
  margin-bottom: 24rpx;
}

.settlement-desc {
  font-size: 26rpx;
  color: #636E72;
  line-height: 1.6;
}

.member-settlement-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.member-settlement-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 16rpx;
}

.member-info-row {
  display: flex;
  align-items: center;
}

.member-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.member-detail {
  display: flex;
  flex-direction: column;
}

.member-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3436;
  margin-bottom: 4rpx;
}

.member-points {
  font-size: 24rpx;
  color: #52C41A;
}

.settle-btn {
  padding: 12rpx 32rpx !important;
  font-size: 26rpx !important;
  background: linear-gradient(135deg, #FFD93D 0%, #FF8E53 100%) !important;
  color: #ffffff !important;
  border: none !important;
  border-radius: 20rpx !important;
  font-weight: 600 !important;
  line-height: 1.5 !important;
}

.settle-btn::after {
  border: none;
}

.settle-btn[disabled] {
  background: #E0E0E0 !important;
  color: #B2BEC3 !important;
}

/* 筛选标签 */
.filter-tabs {
  display: flex;
  gap: 12rpx;
}

.filter-tab {
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  color: #636E72;
  background: #F5F5F5;
  border-radius: 16rpx;
  transition: all 0.3s;
}

.filter-tab.active {
  background: linear-gradient(135deg, #FFD93D 0%, #FF8E53 100%);
  color: #ffffff;
  font-weight: 600;
}

/* 交易列表 */
.transactions-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.transaction-card {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 16rpx;
}

.transaction-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 16rpx;
}

.transaction-icon.earn {
  background: linear-gradient(135deg, rgba(82, 196, 26, 0.15) 0%, rgba(56, 239, 125, 0.15) 100%);
}

.transaction-icon.spend,
.transaction-icon.redeem {
  background: linear-gradient(135deg, rgba(255, 77, 79, 0.15) 0%, rgba(255, 142, 83, 0.15) 100%);
}

.transaction-info {
  flex: 1;
  min-width: 0;
}

.transaction-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #2D3436;
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.transaction-time {
  font-size: 22rpx;
  color: #B2BEC3;
}

.transaction-points {
  font-size: 32rpx;
  font-weight: 700;
}

.transaction-points.positive {
  color: #52C41A;
}

.transaction-points.negative {
  color: #FF4D4F;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-15rpx); }
}

.animate-float {
  animation: float 3s ease-in-out infinite;
}

.empty-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2D3436;
  margin-bottom: 8rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #B2BEC3;
}

/* 加载更多 */
.load-more, .no-more {
  text-align: center;
  padding: 24rpx;
  font-size: 24rpx;
  color: #B2BEC3;
}

/* 结算弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.modal-container {
  width: 85%;
  max-width: 600rpx;
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  transform: scale(0.9);
  transition: transform 0.3s;
}

.modal-overlay.show .modal-container {
  transform: scale(1);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2D3436;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #B2BEC3;
}

.modal-body {
  padding: 30rpx;
}

/* 结算成员信息 */
.settle-member-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  background: #F8F9FA;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.settle-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin-bottom: 12rpx;
}

.settle-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #2D3436;
  margin-bottom: 8rpx;
}

.settle-available {
  font-size: 26rpx;
  color: #52C41A;
}

/* 结算表单 */
.settle-form {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.form-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #2D3436;
  margin-top: 8rpx;
}

.settle-input {
  height: 88rpx;
  background: #F5F5F5;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #2D3436;
}

/* 快捷金额 */
.quick-amounts {
  display: flex;
  gap: 16rpx;
  margin-top: 8rpx;
}

.quick-btn {
  flex: 1;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F0F0F0;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #636E72;
  transition: all 0.3s;
}

.quick-btn:active {
  background: #E0E0E0;
}

.quick-btn.full {
  background: linear-gradient(135deg, rgba(255, 217, 61, 0.2) 0%, rgba(255, 142, 83, 0.2) 100%);
  color: #FF8E53;
}

/* 弹窗底部按钮 */
.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 24rpx 30rpx 30rpx;
}

.cancel-btn {
  flex: 1;
  height: 88rpx;
  background: #F5F5F5 !important;
  color: #636E72 !important;
  font-size: 30rpx !important;
  font-weight: 600 !important;
  border: none !important;
  border-radius: 20rpx !important;
  display: flex !important;
  align-items: center;
  justify-content: center;
}

.confirm-btn {
  flex: 1;
  height: 88rpx;
  background: linear-gradient(135deg, #FFD93D 0%, #FF8E53 100%) !important;
  color: #ffffff !important;
  font-size: 30rpx !important;
  font-weight: 600 !important;
  border: none !important;
  border-radius: 20rpx !important;
  display: flex !important;
  align-items: center;
  justify-content: center;
}

.confirm-btn[disabled] {
  background: #E0E0E0 !important;
  color: #B2BEC3 !important;
}

.cancel-btn::after,
.confirm-btn::after {
  border: none;
}

/* ============ 兑现申请相关样式 ============ */

/* 申请兑现按钮 */
.redeem-apply-btn {
  margin-top: 20rpx;
  padding: 16rpx 40rpx;
  background: rgba(255, 255, 255, 0.3) !important;
  color: #ffffff !important;
  font-size: 28rpx !important;
  font-weight: 600 !important;
  border: 2rpx solid rgba(255, 255, 255, 0.5) !important;
  border-radius: 40rpx !important;
  display: inline-block;
}

.redeem-apply-btn::after {
  border: none;
}

/* 待审核提示 */
.pending-notice {
  margin: 0 30rpx 20rpx;
  padding: 24rpx 30rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.3);
}

.notice-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.notice-text {
  flex: 1;
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
}

.notice-arrow {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 我的兑现申请 */
.redeem-requests-list {
  padding: 0 20rpx;
}

.redeem-request-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.redeem-request-item:last-child {
  border-bottom: none;
}

.request-left {
  display: flex;
  flex-direction: column;
}

.request-points {
  font-size: 32rpx;
  font-weight: 600;
  color: #2D3436;
}

.request-amount {
  font-size: 24rpx;
  color: #636E72;
  margin-top: 4rpx;
}

.request-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.request-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.request-status.pending {
  background: #FFF3E0;
  color: #FF9800;
}

.request-status.approved {
  background: #E8F5E9;
  color: #4CAF50;
}

.request-status.rejected {
  background: #FFEBEE;
  color: #F44336;
}

.request-time {
  font-size: 22rpx;
  color: #B2BEC3;
  margin-top: 6rpx;
}

/* 查看全部 */
.view-all {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #FF8E53;
}

.view-all .arrow {
  font-size: 28rpx;
  margin-left: 4rpx;
}

/* 申请弹窗信息 */
.apply-info {
  display: flex;
  background: #FFF5E6;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.apply-available,
.apply-rate {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.apply-info .label {
  font-size: 24rpx;
  color: #636E72;
  margin-bottom: 8rpx;
}

.apply-info .value {
  font-size: 32rpx;
  font-weight: 600;
  color: #FF8E53;
}

/* 预计金额 */
.apply-amount-preview {
  margin-top: 16rpx;
  padding: 16rpx 20rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #636E72;
  text-align: center;
}

.apply-amount-preview .amount {
  color: #FF8E53;
  font-weight: 600;
  font-size: 32rpx;
}

/* 提示 */
.apply-tips {
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
  background: #E3F2FD;
  border-radius: 12rpx;
  margin-top: 20rpx;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.tip-text {
  flex: 1;
  font-size: 26rpx;
  color: #1976D2;
  line-height: 1.5;
}

/* 管理员快捷入口 */
.admin-actions {
  margin: 0 30rpx 20rpx;
}

.admin-action-btn {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.action-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.action-text {
  flex: 1;
  font-size: 30rpx;
  color: #2D3436;
  font-weight: 500;
}

.action-badge {
  min-width: 36rpx;
  height: 36rpx;
  padding: 0 10rpx;
  background: #FF6B6B;
  border-radius: 18rpx;
  font-size: 24rpx;
  color: #ffffff;
  text-align: center;
  line-height: 36rpx;
}
