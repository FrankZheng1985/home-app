/* pages/profile/redeem-records.wxss */
.page-container {
  min-height: 100vh;
  background: #F8F9FB;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.hero-section {
  position: relative;
  padding-top: 100rpx;
  padding-bottom: 40rpx;
  text-align: center;
}

.hero-bg-glow {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 500rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(79, 172, 254, 0.1) 0%, rgba(255, 255, 255, 0) 70%);
  filter: blur(60rpx);
  z-index: 0;
}

.hero-title {
  font-size: 48rpx;
  font-weight: 800;
  color: #1A1A1A;
  position: relative;
  z-index: 1;
}

.hero-subtitle {
  font-size: 20rpx;
  color: #CCC;
  letter-spacing: 4rpx;
  text-transform: uppercase;
  margin-top: 8rpx;
  position: relative;
  z-index: 1;
}

.requests-list {
  padding-bottom: 40rpx;
}

.request-item {
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.request-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.02);
}

.request-info {
  display: flex;
  flex-direction: column;
}

.points-val {
  font-size: 32rpx;
  font-weight: 800;
  color: #1A1A1A;
}

.time-text {
  font-size: 20rpx;
  color: #CCC;
}

.status-badge {
  font-size: 20rpx;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  font-weight: 600;
}

.status-badge.pending { background: #FFF3E0; color: #FF9800; }
.status-badge.approved { background: #E8F5E9; color: #4CAF50; }
.status-badge.rejected { background: #FFEBEE; color: #F44336; }

.amount-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.amount-row .label { font-size: 24rpx; color: #999; }
.amount-row .val { font-size: 32rpx; font-weight: 700; color: #FF4D4F; }

.remark {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.reject-box {
  margin-top: 16rpx;
  padding: 16rpx;
  background: #FFF1F0;
  border-radius: 12rpx;
}

.reject-label { font-size: 22rpx; color: #FF4D4F; font-weight: 600; }
.reject-val { font-size: 22rpx; color: #666; }

.empty-tip {
  text-align: center;
  font-size: 24rpx;
  color: #CCC;
  padding: 100rpx 0;
}

.glass-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(40rpx);
  -webkit-backdrop-filter: blur(40rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.03);
}

.success-pop {
  animation: pop 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

@keyframes pop {
  0% { transform: scale(0.9); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}
