/* pages/profile/profile.wxss */

.profile-container {
  padding-top: 20rpx;
}

/* 用户信息卡片 */
.user-card {
  padding: 40rpx 30rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  margin-right: 24rpx;
  border: 4rpx solid var(--primary-light);
}

.user-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.user-family {
  font-size: 26rpx;
}

.edit-arrow {
  font-size: 32rpx;
  color: var(--text-placeholder);
}

/* 积分卡片 */
.points-card {
  padding: 30rpx;
}

.points-header {
  margin-bottom: 24rpx;
}

.points-title {
  font-size: 30rpx;
  font-weight: 600;
}

.points-content {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}

.points-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.points-value {
  font-size: 48rpx;
  font-weight: 700;
}

.points-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-top: 8rpx;
}

.points-divider {
  width: 1rpx;
  height: 80rpx;
  background-color: var(--border-color);
}

.points-footer {
  text-align: center;
  padding-top: 20rpx;
  border-top: 1rpx solid var(--border-color);
  font-size: 28rpx;
}

/* 菜单卡片 */
.menu-card {
  padding: 0;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: var(--background-color);
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.menu-title {
  font-size: 30rpx;
  color: var(--text-primary);
}

.menu-arrow {
  font-size: 28rpx;
  color: var(--text-placeholder);
}

/* 退出登录 */
.logout-section {
  margin-top: 40rpx;
  padding: 0 30rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: var(--card-background);
  color: var(--error-color);
  font-size: 32rpx;
  border-radius: 12rpx;
  border: none;
}

.logout-btn::after {
  border: none;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx;
  font-size: 24rpx;
}
