/* ================================ */
/*          Header Section          */
/* ================================ */

.profile-header {
  position: relative;
  padding-top: 8vh;
  padding-bottom: 4vh;
}

.header-bg-glow {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 70vw;
  height: 50vw;
  max-width: 500rpx;
  max-height: 400rpx;
  background: radial-gradient(circle, rgba(78, 140, 255, 0.1) 0%, rgba(255, 255, 255, 0) 70%);
  filter: blur(60rpx);
  z-index: 0;
}

.header-content {
  position: relative;
  z-index: 1;
}

.user-section {
  display: flex;
  align-items: center;
}

.avatar-wrapper {
  position: relative;
  margin-right: var(--space-lg);
}

.user-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 4rpx solid #FFF;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.1);
}

.avatar-ring {
  position: absolute;
  top: -8rpx;
  left: -8rpx;
  right: -8rpx;
  bottom: -8rpx;
  border: 2rpx solid rgba(0,0,0,0.05);
  border-radius: 50%;
}

.user-name {
  font-size: var(--font-size-xxl);
  font-weight: 800;
  color: #1A1A1A;
  margin-bottom: 12rpx;
  display: block;
}

.user-family {
  display: inline-flex;
  align-items: center;
  background: #FFF;
  padding: 8rpx 24rpx;
  border-radius: var(--radius-full);
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.03);
}

.family-icon {
  font-size: var(--font-size-sm);
  margin-right: 8rpx;
}

.family-name {
  font-size: var(--font-size-sm);
  color: #666;
  font-weight: 500;
}

/* ================================ */
/*          Stats Card              */
/* ================================ */

.stats-card {
  padding: var(--space-lg);
  margin-bottom: var(--space-lg);
}

.stat-group {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-label {
  font-size: var(--font-size-xs);
  color: #999;
  margin-bottom: 8rpx;
  display: block;
}

.stat-value {
  font-size: var(--font-size-xl);
  font-weight: 800;
  color: #1A1A1A;
}

.stat-divider {
  width: 2rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.05);
}

/* ================================ */
/*          Menu List               */
/* ================================ */

.menu-list {
  padding-bottom: var(--space-sm);
}

.menu-group {
  margin-bottom: var(--space-md);
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: var(--space-lg) var(--space-md);
  border-bottom: 1rpx solid rgba(0,0,0,0.02);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: var(--font-size-xl);
  margin-right: var(--space-lg);
}

.menu-title {
  flex: 1;
  font-size: var(--font-size-md);
  color: #1A1A1A;
  font-weight: 600;
}

.menu-arrow {
  color: #CCC;
  font-size: var(--font-size-lg);
}

/* ================================ */
/*          Logout                  */
/* ================================ */

.logout-section {
  margin-top: var(--space-xl);
}

.logout-btn {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FF4D4F;
  font-size: var(--font-size-md);
  font-weight: 600;
  background: rgba(255, 77, 79, 0.05);
  border-radius: var(--radius-lg);
}

.version-info {
  text-align: center;
  font-size: var(--font-size-xs);
  color: #CCC;
  padding: var(--space-md) 0;
}

