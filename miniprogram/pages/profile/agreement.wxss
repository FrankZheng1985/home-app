/* pages/profile/agreement.wxss - 3D极简科技版 */

.page-container {
  min-height: 100vh;
  background: #F8F9FB;
  padding: 0; /* 内部 scroll-view 处理 padding */
}

.agreement-scroll {
  height: 100vh;
}

/* ================================ */
/*          Hero Section            */
/* ================================ */

.hero-section {
  position: relative;
  padding-top: 100rpx;
  padding-bottom: 60rpx;
  text-align: center;
}

.hero-bg-glow {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 500rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(78, 140, 255, 0.1) 0%, rgba(255, 255, 255, 0) 70%);
  filter: blur(60rpx);
  z-index: 0;
}

.hero-title {
  font-size: 48rpx;
  font-weight: 800;
  color: #1A1A1A;
  position: relative;
  z-index: 1;
}

.hero-subtitle {
  font-size: 20rpx;
  color: #CCC;
  letter-spacing: 4rpx;
  text-transform: uppercase;
  margin-top: 8rpx;
  position: relative;
  z-index: 1;
}

/* ================================ */
/*          Agreement Body          */
/* ================================ */

.agreement-body {
  padding: 0 40rpx;
}

.agreement-card {
  padding: 40rpx;
  margin-bottom: 40rpx;
}

.section {
  margin-bottom: 60rpx;
}

.section:last-child { margin-bottom: 0; }

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1A1A1A;
  margin-bottom: 24rpx;
  display: block;
}

.section-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.section-content text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

/* ================================ */
/*          Common Glass            */
/* ================================ */

.glass-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(40rpx);
  -webkit-backdrop-filter: blur(40rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.03);
}

.success-pop {
  animation: pop 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

@keyframes pop {
  0% { transform: scale(0.9); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}
