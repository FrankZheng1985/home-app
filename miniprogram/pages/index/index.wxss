/* ================================ */
/*          Hero Section            */
/* ================================ */

.hero-section {
  position: relative;
  min-height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: var(--space-lg);
  z-index: 1;
}

.hero-bg-glow {
  position: absolute;
  width: 60vw;
  height: 60vw;
  max-width: 400rpx;
  max-height: 400rpx;
  background: radial-gradient(circle, rgba(78, 140, 255, 0.15) 0%, rgba(255, 255, 255, 0) 70%);
  filter: blur(60rpx);
  z-index: -1;
}

.hero-content {
  text-align: center;
}

.hero-title {
  font-size: var(--font-size-xxl);
  font-weight: 800;
  color: #1A1A1A;
  letter-spacing: 2rpx;
}

.hero-subtitle {
  font-size: var(--font-size-xs);
  color: #999;
  margin-top: 8rpx;
  text-transform: uppercase;
  letter-spacing: 4rpx;
}

/* ================================ */
/*          Glass Card              */
/* ================================ */

.main-stats {
  padding: var(--space-xl) var(--space-lg);
  margin-bottom: var(--space-lg);
  position: relative;
  z-index: 2;
  overflow: hidden;
}

.stats-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: none;
}

.stats-circle {
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(0, 0, 0, 0.02) 0%, transparent 70%);
  border-radius: 50%;
  border: 1rpx solid rgba(0, 0, 0, 0.03);
}

.pulse-slow {
  animation: pulse 8s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); opacity: 0.5; }
  50% { transform: scale(1.5); opacity: 0.2; }
}

.stat-group {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: var(--space-lg);
}

.value-with-unit {
  display: flex;
  align-items: baseline;
  justify-content: center;
}

.stat-value {
  font-size: var(--font-size-huge);
  font-weight: 800;
  color: #1A1A1A;
  line-height: 1;
}

.unit {
  font-size: var(--font-size-xs);
  color: #999;
  margin-left: 8rpx;
  font-weight: 600;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.05);
}

/* ================================ */
/*          Buttons                 */
/* ================================ */

.primary-btn {
  background: #000000;
  color: #FFFFFF;
  width: 100%;
  height: 110rpx;
  border-radius: 55rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-size-lg);
  font-weight: 600;
  position: relative;
  overflow: hidden;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.2);
}

/* ... 保持其余样式 ... */

.btn-glow {
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: 0.5s;
}

.primary-btn:active .btn-glow {
  left: 100%;
}

.primary-btn .btn-glow {
  animation: shimmer 3s infinite;
}

@keyframes shimmer {
  0% { left: -100%; }
  30%, 100% { left: 100%; }
}

/* ================================ */
/*          Features Grid           */
/* ================================ */

.features-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--space-md);
  padding-bottom: var(--space-xl);
}

.feature-card {
  padding: var(--space-lg) var(--space-md);
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  min-height: 240rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.feature-card:active {
  transform: translateY(-8rpx) scale(1.02);
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.08);
}

.feature-icon {
  font-size: var(--font-size-xxl);
  margin-bottom: var(--space-md);
  background: #F0F2F5;
  width: 90rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-md);
  transition: all 0.3s;
}

.feature-card:active .feature-icon {
  background: #000;
  color: #fff;
  transform: rotate(10deg);
}

.feature-name {
  font-size: var(--font-size-lg);
  font-weight: 700;
  color: #1A1A1A;
  margin-bottom: 8rpx;
  display: block;
}

.feature-desc {
  font-size: var(--font-size-xs);
  color: #999;
}

/* ================================ */
/*          Animations              */
/* ================================ */

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

.animate-float {
  animation: float 5s ease-in-out infinite;
}

.success-pop {
  animation: pop 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

@keyframes pop {
  0% { transform: scale(0.9); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}
