/* pages/index/index.wxss */

.index-container {
  padding-top: 20rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--border-color);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 欢迎头部 */
.header-section {
  margin-bottom: 30rpx;
}

.welcome-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.welcome-text {
  display: flex;
  flex-direction: column;
}

.greeting {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.family-name {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-top: 8rpx;
}

.user-avatar {
  border: 4rpx solid var(--primary-light);
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 20rpx;
}

.quick-action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-icon {
  font-size: 56rpx;
  margin-bottom: 12rpx;
}

.action-text {
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* 积分概览 */
.points-overview {
  padding: 30rpx;
}

.card-header {
  margin-bottom: 24rpx;
}

.view-more {
  font-size: 26rpx;
}

.points-stats {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.points-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.points-value {
  font-size: 48rpx;
  font-weight: 700;
}

.points-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-top: 8rpx;
}

.points-divider {
  width: 1rpx;
  height: 60rpx;
  background-color: var(--border-color);
}

/* 排行榜 */
.ranking-list {
  margin-top: 20rpx;
}

.ranking-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.ranking-position {
  width: 60rpx;
  font-size: 32rpx;
  text-align: center;
}

.ranking-avatar {
  margin: 0 16rpx;
}

.ranking-name {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-primary);
}

.ranking-points {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--primary-color);
}

/* 动态列表 */
.moments-list {
  margin-top: 20rpx;
}

.moment-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.moment-item:last-child {
  border-bottom: none;
}

.moment-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.moment-avatar {
  margin-right: 12rpx;
}

.moment-info {
  display: flex;
  flex-direction: column;
}

.moment-author {
  font-size: 28rpx;
  font-weight: 500;
}

.moment-time {
  font-size: 24rpx;
}

.moment-content {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 无家庭状态 */
.no-family-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 70vh;
  padding: 40rpx;
}

.no-family-icon {
  font-size: 160rpx;
  margin-bottom: 40rpx;
}

.no-family-title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.no-family-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
  text-align: center;
  margin-bottom: 60rpx;
}

.family-actions {
  width: 100%;
  max-width: 500rpx;
}
