<!--pages/index/index.wxml - 3D极简科技版-->
<view class="page-container">
  <!-- 顶部 3D 产品展示区 (Hero Section) -->
  <view class="hero-section">
    <view class="hero-bg-glow"></view>
    <!-- 3D 产品展示区已移除 -->
    <view class="hero-content">
      <view class="hero-title">智能家庭终端</view>
      <view class="hero-subtitle">Smart Home Hub v2</view>
    </view>
  </view>

  <!-- 核心数据展示 (Glassmorphism Card) -->
  <view class="glass-card main-stats success-pop">
    <view class="stats-background">
      <view class="stats-circle pulse-slow"></view>
    </view>
    <view class="stat-group">
      <view class="stat-item">
        <text class="stat-label">当前积分</text>
        <view class="value-with-unit">
          <text class="stat-value">{{pointsSummary.totalPoints || 0}}</text>
          <text class="unit">PTS</text>
        </view>
      </view>
      <view class="stat-divider"></view>
      <view class="stat-item">
        <text class="stat-label">本周排行</text>
        <view class="value-with-unit">
          <text class="stat-value">{{pointsSummary.rank || '-'}}</text>
          <text class="unit">RANK</text>
        </view>
      </view>
    </view>
    
    <view class="action-row">
      <view class="primary-btn btn-active-feedback" bindtap="goToRecordChore">
        <text>立即记录</text>
        <view class="btn-glow"></view>
      </view>
    </view>
  </view>

  <!-- 功能网格 -->
  <view class="features-grid">
    <view class="feature-card glass-card" bindtap="goToCalendar">
      <view class="feature-icon">📅</view>
      <view class="feature-info">
        <text class="feature-name">家庭日历</text>
        <text class="feature-desc">共享精彩时刻</text>
      </view>
    </view>
    <view class="feature-card glass-card" bindtap="goToInventory">
      <view class="feature-icon">📦</view>
      <view class="feature-info">
        <text class="feature-name">物资清单</text>
        <text class="feature-desc">库存智能预警</text>
      </view>
    </view>
    <view class="feature-card glass-card" bindtap="goToSavings">
      <view class="feature-icon">🏦</view>
      <view class="feature-info">
        <text class="feature-name">复利存款</text>
        <text class="feature-desc">财富稳步增值</text>
      </view>
    </view>
    <view class="feature-card glass-card" bindtap="goToRewards">
      <view class="feature-icon">🎁</view>
      <view class="feature-info">
        <text class="feature-name">奖励兑换</text>
        <text class="feature-desc">积分换取惊喜</text>
      </view>
    </view>
    <view class="feature-card glass-card" bindtap="goToSports">
      <view class="feature-icon">🏃</view>
      <view class="feature-info">
        <text class="feature-name">运动打卡</text>
        <text class="feature-desc">开启健康生活</text>
      </view>
    </view>
    <view class="feature-card glass-card" bindtap="goToMoments">
      <view class="feature-icon">✨</view>
      <view class="feature-info">
        <text class="feature-name">家庭动态</text>
        <text class="feature-desc">记录点滴美好</text>
      </view>
    </view>
    <view class="feature-card glass-card" bindtap="goToFamily">
      <view class="feature-icon">👥</view>
      <view class="feature-info">
        <text class="feature-name">家庭管理</text>
        <text class="feature-desc">连接每一位家人</text>
      </view>
    </view>
  </view>

  <!-- 底部安全区域占位 -->
  <view class="safe-bottom"></view>
</view>