}

/* æµ®åŠ¨åŠ¨ç”» */
@keyframes float {
  0%, 100% { 
    transform: translateY(0) rotate(0deg); 
  }
  25% { 
    transform: translateY(-12rpx) rotate(1deg); 
  }
  75% { 
    transform: translateY(-8rpx) rotate(-1deg); 
  }
}

/* å‘¼å¸è„‰åŠ¨ */
@keyframes breathe {
  0%, 100% { 
    transform: scale(1); 
